    // Load categories for filter on page load
    async function loadCategoriesFilter() {
      try {
        const response = await fetch('/barang/form-data');
        const data = await response.json();
        
        console.log('Categories loaded:', data.categories);
        
        const filterCategory = document.getElementById('filterCategory');
        filterCategory.innerHTML = '<option value="">Semua Kategori</option>';
        
        data.categories.forEach(category => {
          const option = document.createElement('option');
          option.value = category.name.toLowerCase();
          option.textContent = category.name;
          filterCategory.appendChild(option);
        });
        
        console.log('Category filter populated with', data.categories.length, 'categories');
      } catch (error) {
        console.error('Error loading categories:', error);
      }
    }

    // Combined filter function
    function applyFilters() {
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      const categoryFilter = document.getElementById('filterCategory').value.toLowerCase();
      
      // Filter desktop table rows
      document.querySelectorAll('.barang-row').forEach(row => {
        const text = row.textContent.toLowerCase();
        const matchesSearch = searchTerm === '' || text.includes(searchTerm);
        const matchesCategory = categoryFilter === '' || text.includes(categoryFilter);
        
        row.style.display = (matchesSearch && matchesCategory) ? '' : 'none';
      });
      
      // Filter mobile cards
      document.querySelectorAll('.mobile-card').forEach(card => {
        const text = card.textContent.toLowerCase();
        const matchesSearch = searchTerm === '' || text.includes(searchTerm);
        const matchesCategory = categoryFilter === '' || text.includes(categoryFilter);
        
        card.style.display = (matchesSearch && matchesCategory) ? '' : 'none';
      });
      
      // Update visible count
      updateVisibleCount();
    }

    // Update visible items count
    function updateVisibleCount() {
      const visibleRows = Array.from(document.querySelectorAll('.barang-row')).filter(row => row.style.display !== 'none');
      const visibleCards = Array.from(document.querySelectorAll('.mobile-card')).filter(card => card.style.display !== 'none');
      const totalVisible = visibleRows.length || visibleCards.length;
      
      // You can display this count somewhere if needed
      console.log(`Menampilkan ${totalVisible} barang`);
    }

    // Apply sorting via AJAX (always by created_at)
    async function applySorting() {
      const sortOrderSelect = document.getElementById('sortOrder');
      
      if (!sortOrderSelect) {
        console.error('Sort order element not found!');
        return;
      }
      
      const sortOrder = sortOrderSelect.value;
      
      console.log('=== Applying Sort ===');
      console.log('Sort Order:', sortOrder);
      console.log('Fetching URL:', `/barang?sortBy=created_at&sortOrder=${sortOrder}`);
      
      try {
        // Show loading indicator
        Swal.fire({
          title: 'Memuat...',
          html: `<p>Mengurutkan data berdasarkan tanggal dibuat (${sortOrderSelect.options[sortOrderSelect.selectedIndex].text})</p>`,
          allowOutsideClick: false,
          allowEscapeKey: false,
          didOpen: () => {
            Swal.showLoading();
          }
        });
        
        const response = await fetch(`/barang?sortBy=created_at&sortOrder=${sortOrder}`, {
          headers: {
            'Accept': 'application/json'
          }
        });
        
        console.log('Response status:', response.status);
        
        const result = await response.json();
        console.log('Total items received:', result.barang ? result.barang.length : 0);
        
        if (result.success && result.barang) {
          // Update the table with new sorted data
          updateTableWithData(result.barang);
          
          Swal.close();
          
          // Show success toast
          const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true
          });
          
          Toast.fire({
            icon: 'success',
            title: `âœ… Data diurutkan: ${result.barang.length} item`
          });
          
          console.log('=== Sort Applied Successfully ===');
        } else {
          throw new Error('Invalid response format');
        }
      } catch (error) {
        console.error('=== Error Applying Sort ===');
        console.error('Error:', error);
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Gagal mengurutkan data: ' + error.message
        });
      }
    }
    
