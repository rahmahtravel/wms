      bottom: 0;
      background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
      opacity: 0.6;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fadeInUp {
      animation: fadeInUp 0.6s ease-out forwards;
    }

    .bg-primary-gradient {
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
    }
  </style>
</head>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>
  <%- include('../partials/sidebar') %>

  <main id="mainContent" class="ml-64 mt-16 p-4 md:p-6 lg:p-8 transition-all duration-300 min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50">
    <!-- Page Header -->
    <div class="mb-8 animate-fadeInUp">
      <div class="rounded-2xl overflow-hidden shadow-2xl">
        <div class="gradient-header text-white p-8 md:p-10">
          <div class="relative z-10">
            <div class="flex flex-col md:flex-row items-center gap-6">
              <!-- Modern Logo Container -->
              <div class="flex-none">
                <div class="relative group">
                  <div class="absolute inset-0 bg-white opacity-20 rounded-2xl blur-xl group-hover:opacity-30 transition-opacity"></div>
                  <div class="relative w-24 h-24 md:w-28 md:h-28 rounded-2xl bg-white/95 backdrop-blur-sm flex items-center justify-center shadow-2xl transform group-hover:scale-105 transition-transform duration-300">
                    <img src="/images/logo.png" alt="Logo" class="max-h-16 md:max-h-20 max-w-full object-contain">
                  </div>
                </div>
              </div>
              
              <!-- Text Content -->
              <div class="flex-1 text-center md:text-left">
                <h1 class="text-2xl md:text-3xl lg:text-4xl font-black leading-tight text-white mb-2 tracking-tight">
                  Transfer Barang Antar Gudang
                </h1>
                <p class="text-base md:text-lg text-white/90 font-medium max-w-2xl">
                  Kelola transfer barang antar lokasi gudang dengan tracking lengkap
                </p>
              </div>

              <!-- Action Button -->
              <div class="flex-none hidden lg:block">
                <div class="rounded-2xl p-4">
                  <button onclick="openCreateModal()" class="w-full px-6 py-3 bg-white/90 text-blue-700 font-bold rounded-xl hover:bg-white transition-all shadow-lg hover:shadow-xl transform hover:scale-105">
                    <i class="fas fa-plus mr-2"></i>Buat Transfer
                  </button>
                </div>
              </div>
            </div>

            <!-- Mobile Action Button -->
            <div class="flex-none lg:hidden w-full md:w-auto mt-4">
              <button onclick="openCreateModal()" class="w-full px-6 py-3 bg-white/90 text-blue-700 font-bold rounded-xl hover:bg-white transition-all shadow-lg hover:shadow-xl transform hover:scale-105">
                <i class="fas fa-plus mr-2"></i>Buat Transfer
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Transfers Table -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider">No. Transfer</th>
              <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider">Dari Gudang</th>
              <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider">Ke Gudang</th>
              <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider">Tanggal</th>
              <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-center text-xs font-semibold uppercase tracking-wider">Aksi</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (transfers && transfers.length > 0) { %>
              <% transfers.forEach((transfer, index) => { %>
                <tr class="hover:bg-blue-50 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="font-mono text-sm font-semibold text-gray-800 bg-blue-100 px-3 py-1.5 rounded"><%= transfer.transfer_number %></span>
                  </td>
                  <td class="px-6 py-4">
                    <div class="font-medium text-gray-900"><%= transfer.from_location %></div>
                    <% if (transfer.from_branch) { %>
                      <div class="text-xs text-gray-500 mt-1"><%= transfer.from_branch %></div>
                    <% } %>
                  </td>
                  <td class="px-6 py-4">
                    <div class="font-medium text-gray-900"><%= transfer.to_location %></div>
                    <% if (transfer.to_branch) { %>
                      <div class="text-xs text-gray-500 mt-1"><%= transfer.to_branch %></div>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <%= new Date(transfer.transfer_date).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (transfer.status === 'received') { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        <i class="fas fa-check-circle mr-1"></i> Diterima
                      </span>
                    <% } else if (transfer.status === 'in_transit') { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                        <i class="fas fa-truck mr-1"></i> Dalam Transit
                      </span>
                    <% } else if (transfer.status === 'pending') { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                        <i class="fas fa-clock mr-1"></i> Pending
                      </span>
                    <% } else { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                        <i class="fas fa-file mr-1"></i> Draft
                      </span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <div class="flex items-center justify-center gap-2">
                      <button onclick="viewDetail(<%= transfer.id %>)" class="inline-flex items-center px-3 py-1.5 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors" title="Lihat Detail">
                        <i class="fas fa-eye"></i>
                      </button>
                      <button onclick="editTransfer(<%= transfer.id %>)" class="inline-flex items-center px-3 py-1.5 bg-yellow-100 text-yellow-700 rounded-lg hover:bg-yellow-200 transition-colors" title="Edit">
                        <i class="fas fa-edit"></i>
                      </button>
                      <button onclick="deleteTransfer(<%= transfer.id %>)" class="inline-flex items-center px-3 py-1.5 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors" title="Hapus">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="6" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center justify-center">
                    <i class="fas fa-exchange-alt text-blue-300 text-6xl mb-4"></i>
                    <p class="text-gray-500 text-lg font-medium mb-2">Belum ada data transfer</p>
                    <p class="text-gray-400 text-sm mb-4">Mulai buat transfer barang pertama Anda</p>
                    <button onclick="openCreateModal()" class="px-6 py-2.5 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-all shadow-lg font-semibold">
                      <i class="fas fa-plus mr-2"></i>Buat Transfer Pertama
                    </button>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <!-- Detail Modal -->
  <div id="detailModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-6xl w-full max-h-[90vh] overflow-y-auto">
      <div class="sticky top-0 bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-4 flex justify-between items-center z-10">
        <h2 class="text-xl font-bold">
          <i class="fas fa-info-circle mr-2"></i>Detail Transfer
        </h2>
        <button onclick="closeDetailModal()" class="text-white hover:text-gray-200">
          <i class="fas fa-times text-2xl"></i>
        </button>
      </div>
      
      <div id="detailContent" class="p-6">
        <!-- Content will be loaded here -->
      </div>
    </div>
  </div>

  <!-- Create/Edit Modal -->
  <div id="transferModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
      <div class="sticky top-0 bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-4 flex justify-between items-center">
        <h2 id="modalTitle" class="text-xl font-bold">
          <i class="fas fa-exchange-alt mr-2"></i>Buat Transfer Baru
        </h2>
        <button onclick="closeModal()" class="text-white hover:text-gray-200">
          <i class="fas fa-times text-2xl"></i>
        </button>
      </div>
      
      <form id="transferForm" method="POST" action="/transfer" class="p-6">
        <input type="hidden" id="transferId" name="id">
        
        <div class="space-y-6">
          <!-- Transfer Info -->
          <div class="bg-blue-50 rounded-xl p-6 border border-blue-200">
            <h3 class="text-lg font-bold text-blue-900 mb-4">
              <i class="fas fa-info-circle mr-2"></i>Informasi Transfer
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-calendar mr-1 text-blue-600"></i>Tanggal Transfer *
                </label>
                <input type="date" name="transfer_date" id="transfer_date" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-flag mr-1 text-blue-600"></i>Status
                </label>
                <select name="status" id="status"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="draft">Draft</option>
                  <option value="pending">Pending</option>
                  <option value="in_transit">Dalam Transit</option>
                  <option value="received">Diterima</option>
                </select>
              </div>
            </div>
          </div>

          <!-- From Location -->
          <div class="bg-green-50 rounded-xl p-6 border border-green-200">
            <h3 class="text-lg font-bold text-green-900 mb-4">
              <i class="fas fa-warehouse mr-2"></i>Dari Lokasi
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-map-marker-alt mr-1 text-green-600"></i>Gudang Asal *
                </label>
                <select name="from_warehouse_id" id="from_warehouse_id" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                  <option value="">Pilih Gudang</option>
                </select>
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-building mr-1 text-green-600"></i>Cabang Asal
                </label>
                <select name="from_branch_id" id="from_branch_id"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                  <option value="">Pilih Cabang</option>
                </select>
              </div>
            </div>
          </div>

          <!-- To Location -->
          <div class="bg-purple-50 rounded-xl p-6 border border-purple-200">
            <h3 class="text-lg font-bold text-purple-900 mb-4">
              <i class="fas fa-warehouse mr-2"></i>Ke Lokasi
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-map-marker-alt mr-1 text-purple-600"></i>Gudang Tujuan *
                </label>
                <select name="to_warehouse_id" id="to_warehouse_id" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                  <option value="">Pilih Gudang</option>
                </select>
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-building mr-1 text-purple-600"></i>Cabang Tujuan
                </label>
                <select name="to_branch_id" id="to_branch_id"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                  <option value="">Pilih Cabang</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Items Section -->
          <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-lg font-bold text-gray-900">
                <i class="fas fa-boxes mr-2"></i>Barang yang Ditransfer
              </h3>
              <button type="button" onclick="addItem()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-semibold">
                <i class="fas fa-plus mr-1"></i>Tambah Barang
              </button>
            </div>
            
            <div id="itemsContainer" class="space-y-3">
              <!-- Items will be added here -->
            </div>
          </div>

          <!-- Notes -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              <i class="fas fa-sticky-note mr-1 text-blue-600"></i>Catatan
            </label>
            <textarea name="notes" id="notes" rows="3"
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                      placeholder="Tambahkan catatan untuk transfer ini"></textarea>
          </div>
        </div>
        
        <div class="flex gap-3 mt-6">
          <button type="button" onclick="closeModal()"
                  class="flex-1 px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-medium">
            <i class="fas fa-times mr-2"></i>Batal
          </button>
          <button type="submit"
                  class="flex-1 px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 transition font-medium shadow-lg">
            <i class="fas fa-save mr-2"></i>Simpan Transfer
          </button>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>

  <script>
    let itemCounter = 0;
    let warehousesData = [];
    let branchesData = [];
    let barangData = [];

    // Load master data on page load
    document.addEventListener('DOMContentLoaded', async function() {
      await loadMasterData();
      
      // Set default date to today
      const today = new Date().toISOString().split('T')[0];
      document.getElementById('transfer_date').value = today;
    });

    async function loadMasterData() {
      try {
        // Load warehouses
        const whResponse = await fetch('/transfer/api/warehouses');
        warehousesData = await whResponse.json();
        
        // Load branches
        const brResponse = await fetch('/transfer/api/branches');
        branchesData = await brResponse.json();
        
        // Load barang
        const bgResponse = await fetch('/transfer/api/barang');
        barangData = await bgResponse.json();
        
        populateSelects();
      } catch (error) {
        console.error('Error loading master data:', error);
      }
    }

    function populateSelects() {
      // Populate warehouse selects
      const fromWh = document.getElementById('from_warehouse_id');
      const toWh = document.getElementById('to_warehouse_id');
      
      warehousesData.forEach(wh => {
        fromWh.innerHTML += `<option value="${wh.id}">${wh.nama_lokasi}</option>`;
        toWh.innerHTML += `<option value="${wh.id}">${wh.nama_lokasi}</option>`;
      });
      
      // Populate branch selects
      const fromBr = document.getElementById('from_branch_id');
      const toBr = document.getElementById('to_branch_id');
      
      branchesData.forEach(br => {
        fromBr.innerHTML += `<option value="${br.id}">${br.nama_cabang}</option>`;
        toBr.innerHTML += `<option value="${br.id}">${br.nama_cabang}</option>`;
      });
    }

    function addItem() {
      itemCounter++;
      const container = document.getElementById('itemsContainer');
      
      const itemHtml = `
        <div class="item-row bg-white border border-gray-300 rounded-lg p-4" data-item-id="${itemCounter}">
          <div class="flex items-start gap-4">
            <div class="flex-1 grid grid-cols-1 md:grid-cols-3 gap-3">
              <div class="md:col-span-2">
                <label class="block text-xs font-semibold text-gray-600 mb-1">Barang *</label>
                <select name="items[${itemCounter}][id_barang]" required class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="">Pilih Barang</option>
                  ${barangData.map(b => `<option value="${b.id_barang}">${b.kode_barang} - ${b.nama_barang}</option>`).join('')}
                </select>
              </div>
              
              <div>
                <label class="block text-xs font-semibold text-gray-600 mb-1">Jumlah *</label>
                <input type="number" name="items[${itemCounter}][quantity_requested]" required min="1" value="1"
                       class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              </div>
            </div>
            
            <button type="button" onclick="removeItem(${itemCounter})" class="mt-6 px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">
              <i class="fas fa-trash"></i>
            </button>
          </div>
        </div>
      `;
      
      container.insertAdjacentHTML('beforeend', itemHtml);
    }

    function removeItem(itemId) {
      const itemRow = document.querySelector(`[data-item-id="${itemId}"]`);
      if (itemRow) {
        itemRow.remove();
      }
    }

    // Detail Modal
    async function viewDetail(id) {
      try {
        const response = await fetch(`/transfer/${id}/data`);
        if (!response.ok) throw new Error('Gagal memuat data');
        
        const data = await response.json();
        const transfer = data.transfer;
        const items = data.items;
        
        const formatDate = (dateStr) => {
          if (!dateStr) return '-';
          return new Date(dateStr).toLocaleDateString('id-ID', { 
            weekday: 'long',
            day: '2-digit', 
            month: 'long', 
            year: 'numeric'
          });
        };
        
        const formatDateTime = (dateStr) => {
          if (!dateStr) return '-';
          return new Date(dateStr).toLocaleDateString('id-ID', { 
            day: '2-digit', 
            month: 'long', 
            year: 'numeric', 
            hour: '2-digit', 
            minute: '2-digit' 
          });
        };
        
        const getStatusBadge = (status) => {
          const badges = {
            'received': '<span class="px-4 py-2 inline-flex text-sm font-semibold rounded-lg bg-green-100 text-green-800"><i class="fas fa-check-circle mr-2"></i> Diterima</span>',
            'in_transit': '<span class="px-4 py-2 inline-flex text-sm font-semibold rounded-lg bg-blue-100 text-blue-800"><i class="fas fa-truck mr-2"></i> Dalam Transit</span>',
            'pending': '<span class="px-4 py-2 inline-flex text-sm font-semibold rounded-lg bg-yellow-100 text-yellow-800"><i class="fas fa-clock mr-2"></i> Pending</span>',
            'draft': '<span class="px-4 py-2 inline-flex text-sm font-semibold rounded-lg bg-gray-100 text-gray-800"><i class="fas fa-file mr-2"></i> Draft</span>'
          };
          return badges[status] || badges['draft'];
        };
        
        let itemsHtml = '';
        if (items && items.length > 0) {
          itemsHtml = `
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-4">
              <h3 class="text-lg font-bold text-gray-800 mb-4 pb-3 border-b-2 border-blue-600">
                <i class="fas fa-boxes text-blue-600 mr-2"></i>Daftar Barang
              </h3>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Kode</th>
                      <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Nama Barang</th>
                      <th class="px-4 py-3 text-center text-xs font-semibold text-gray-700 uppercase">Diminta</th>
                      <th class="px-4 py-3 text-center text-xs font-semibold text-gray-700 uppercase">Dikirim</th>
                      <th class="px-4 py-3 text-center text-xs font-semibold text-gray-700 uppercase">Diterima</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    ${items.map((item, idx) => `
                      <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 text-sm font-mono font-semibold text-gray-800">${item.kode_barang}</td>
                        <td class="px-4 py-3 text-sm text-gray-900">${item.nama_barang}</td>
                        <td class="px-4 py-3 text-sm text-center font-semibold text-gray-700">${item.quantity_requested}</td>
                        <td class="px-4 py-3 text-sm text-center font-semibold text-blue-600">${item.quantity_shipped || 0}</td>
                        <td class="px-4 py-3 text-sm text-center font-semibold text-green-600">${item.quantity_received || 0}</td>
                      </tr>
                    `).join('')}
                  </tbody>
                </table>
              </div>
            </div>
          `;
        }
        
        const detailHTML = `
          <div class="space-y-4">
            <!-- Main Info -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <h3 class="text-lg font-bold text-gray-800 mb-4 pb-3 border-b-2 border-blue-600">
                <i class="fas fa-info-circle text-blue-600 mr-2"></i>Informasi Transfer
              </h3>
              
              <div class="space-y-3">
                <div class="flex border-b border-gray-100 pb-3">
                  <div class="w-48 font-semibold text-gray-600">
                    <i class="fas fa-hashtag mr-2 text-blue-600"></i>No. Transfer
                  </div>
                  <div class="flex-1">
                    <span class="font-mono font-semibold bg-blue-100 px-3 py-1 rounded">${transfer.transfer_number}</span>
                  </div>
                </div>
                
                <div class="flex border-b border-gray-100 pb-3">
                  <div class="w-48 font-semibold text-gray-600">
                    <i class="fas fa-calendar mr-2 text-blue-600"></i>Tanggal Transfer
                  </div>
                  <div class="flex-1 text-gray-800">${formatDate(transfer.transfer_date)}</div>
                </div>
                
                <div class="flex border-b border-gray-100 pb-3">
                  <div class="w-48 font-semibold text-gray-600">
                    <i class="fas fa-flag mr-2 text-blue-600"></i>Status
                  </div>
                  <div class="flex-1">${getStatusBadge(transfer.status)}</div>
                </div>
                
                <div class="flex border-b border-gray-100 pb-3">
                  <div class="w-48 font-semibold text-gray-600">
                    <i class="fas fa-warehouse mr-2 text-green-600"></i>Dari Gudang
                  </div>
                  <div class="flex-1">
                    <div class="font-semibold text-gray-800">${transfer.from_location}</div>
                    ${transfer.from_branch ? `<div class="text-sm text-gray-500 mt-1">${transfer.from_branch}</div>` : ''}
                  </div>
                </div>
                
                <div class="flex pb-3">
                  <div class="w-48 font-semibold text-gray-600">
                    <i class="fas fa-warehouse mr-2 text-purple-600"></i>Ke Gudang
                  </div>
                  <div class="flex-1">
                    <div class="font-semibold text-gray-800">${transfer.to_location}</div>
                    ${transfer.to_branch ? `<div class="text-sm text-gray-500 mt-1">${transfer.to_branch}</div>` : ''}
                  </div>
                </div>
              </div>
            </div>
            
            ${itemsHtml}
            
            ${transfer.notes ? `
              <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-bold text-gray-800 mb-4 pb-3 border-b-2 border-blue-600">
                  <i class="fas fa-sticky-note text-blue-600 mr-2"></i>Catatan
                </h3>
                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
                  <p class="text-gray-700">${transfer.notes}</p>
                </div>
              </div>
            ` : ''}
            
            <!-- Metadata -->
            <div class="bg-gray-50 rounded-xl border border-gray-200 p-6">
              <h3 class="text-base font-bold text-gray-700 mb-3">
                <i class="fas fa-clock mr-2 text-gray-600"></i>Informasi Sistem
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
                <div>
                  <span class="font-semibold">Dibuat:</span> ${formatDateTime(transfer.created_at)}
                </div>
                <div>
                  <span class="font-semibold">Diupdate:</span> ${formatDateTime(transfer.updated_at)}
                </div>
              </div>
            </div>
          </div>
        `;
        
        document.getElementById('detailContent').innerHTML = detailHTML;
        document.getElementById('detailModal').classList.remove('hidden');
      } catch (error) {
        console.error('Error loading detail:', error);
        swalError('Gagal memuat detail transfer');
      }
    }
    
    function closeDetailModal() {
      document.getElementById('detailModal').classList.add('hidden');
      document.getElementById('detailContent').innerHTML = '';
    }

    // Create/Edit Modal
    function openCreateModal() {
      document.getElementById('modalTitle').innerHTML = '<i class="fas fa-exchange-alt mr-2"></i>Buat Transfer Baru';
      document.getElementById('transferForm').reset();
      document.getElementById('transferId').value = '';
      document.getElementById('transferForm').action = '/transfer';
      
      // Set default date
      const today = new Date().toISOString().split('T')[0];
      document.getElementById('transfer_date').value = today;
      
      // Clear items
      document.getElementById('itemsContainer').innerHTML = '';
      itemCounter = 0;
      
      // Add first item
      addItem();
      
      document.getElementById('transferModal').classList.remove('hidden');
    }
    
    async function editTransfer(id) {
      try {
        const response = await fetch(`/transfer/${id}/data`);
        const data = await response.json();
        const transfer = data.transfer;
        const items = data.items;
        
        document.getElementById('modalTitle').innerHTML = '<i class="fas fa-edit mr-2"></i>Edit Transfer';
        document.getElementById('transferId').value = transfer.id;
        document.getElementById('transfer_date').value = transfer.transfer_date;
        document.getElementById('status').value = transfer.status;
        document.getElementById('from_warehouse_id').value = transfer.from_warehouse_id;
        document.getElementById('to_warehouse_id').value = transfer.to_warehouse_id;
        document.getElementById('from_branch_id').value = transfer.from_branch_id || '';
        document.getElementById('to_branch_id').value = transfer.to_branch_id || '';
        document.getElementById('notes').value = transfer.notes || '';
        
        // Clear and populate items
        document.getElementById('itemsContainer').innerHTML = '';
        itemCounter = 0;
        
        items.forEach(item => {
          addItem();
          const lastItem = document.querySelector(`[data-item-id="${itemCounter}"]`);
          lastItem.querySelector('select[name*="[id_barang]"]').value = item.id_barang;
          lastItem.querySelector('input[name*="[quantity_requested]"]').value = item.quantity_requested;
        });
        
        document.getElementById('transferForm').action = `/transfer/update/${id}`;
        document.getElementById('transferModal').classList.remove('hidden');
      } catch (error) {
        swalError('Gagal memuat data transfer');
      }
    }
    
    function closeModal() {
      document.getElementById('transferModal').classList.add('hidden');
      document.getElementById('transferForm').reset();
      document.getElementById('itemsContainer').innerHTML = '';
      itemCounter = 0;
    }
    
    async function deleteTransfer(id) {
      swalConfirmFetch(`/transfer/delete/${id}`, { method: 'POST' }, 
        'Transfer berhasil dihapus', 'Gagal menghapus transfer');
    }
    
    // Form submission handler
    document.getElementById('transferForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const formAction = this.action;
      
      try {
        const response = await fetch(formAction, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: new URLSearchParams(formData)
        });
        
        if (response.ok) {
          closeModal();
          Swal.fire({
            icon: 'success',
            title: 'Berhasil!',
            text: 'Transfer berhasil disimpan',
            timer: 1500,
            showConfirmButton: false
          }).then(() => {
            window.location.reload();
          });
        } else {
          throw new Error('Failed to save transfer');
        }
      } catch (error) {
        console.error('Error saving transfer:', error);
        Swal.fire({
          icon: 'error',
          title: 'Gagal!',
          text: 'Gagal menyimpan transfer'
        });
      }
    });
    
    // Close modals on ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeModal();
        closeDetailModal();
      }
    });
  </script>
</body>
</html>
