                <div class="bg-green-50 rounded-lg p-2">
                  <div class="flex items-center gap-1 text-green-600 mb-1">
                    <i class="fas fa-calendar-plus"></i>
                    <span class="font-semibold">Dibuat</span>
                  </div>
                  <div class="text-gray-700 font-medium">
                    <%= new Date(supplier.created_at).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                  </div>
                  <div class="text-gray-500 text-xs mt-0.5">
                    <%= new Date(supplier.created_at).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) %>
                  </div>
                </div>
                <div class="bg-blue-50 rounded-lg p-2">
                  <div class="flex items-center gap-1 text-blue-600 mb-1">
                    <i class="fas fa-clock"></i>
                    <span class="font-semibold">Diperbarui</span>
                  </div>
                  <div class="text-gray-700 font-medium">
                    <%= new Date(supplier.updated_at).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                  </div>
                  <div class="text-gray-500 text-xs mt-0.5">
                    <%= new Date(supplier.updated_at).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) %>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="p-12 text-center">
          <i class="fas fa-truck text-6xl text-gray-300 mb-4"></i>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">Belum Ada Supplier</h3>
          <p class="text-gray-500 mb-6">Mulai dengan menambahkan supplier pertama Anda</p>
          <button onclick="openModal()" class="inline-flex items-center px-5 py-2.5 bg-primary-gradient text-white rounded-lg hover:from-primary-dark hover:to-primary transition-all shadow-md hover:shadow-lg transform hover:scale-105">
            <i class="fas fa-plus mr-2"></i>Tambah Supplier
          </button>
        </div>
      <% } %>
    </div>
  </main>

  <!-- Modal Form -->
  <div id="modalForm" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full transform transition-all max-h-[90vh] overflow-y-auto">
      <div class="bg-primary-gradient text-white p-6 rounded-t-2xl sticky top-0 z-10">
        <h2 class="text-2xl font-bold" id="modalTitle">Tambah Supplier</h2>
      </div>
      <form id="supplierForm" class="p-6">
        <input type="hidden" id="supplierId">
        
        <div class="mb-5">
          <label class="block text-gray-700 font-medium mb-2">
            <i class="fas fa-truck mr-2 text-primary"></i>Nama Supplier <span class="text-red-500">*</span>
          </label>
          <input type="text" id="supplierName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Contoh: PT Maju Jaya">
        </div>

        <div class="mb-5">
          <label class="block text-gray-700 font-medium mb-2">
            <i class="fas fa-phone mr-2 text-green-600"></i>Nomor Telepon
          </label>
          <input type="text" id="supplierPhone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Contoh: 08123456789">
        </div>

        <div class="mb-6">
          <label class="block text-gray-700 font-medium mb-2">
            <i class="fas fa-link mr-2 text-blue-600"></i>Website Link
          </label>
          <input type="url" id="supplierLink" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="https://example.com">
        </div>

        <div class="flex gap-3">
          <button type="button" onclick="closeModal()" class="flex-1 px-4 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium">
            <i class="fas fa-times mr-2"></i>Batal
          </button>
          <button type="submit" class="flex-1 px-4 py-3 bg-primary-gradient text-white rounded-lg hover:from-primary-dark hover:to-primary transition font-medium shadow-md">
            <i class="fas fa-save mr-2"></i>Simpan
          </button>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>

  <script>
    function openModal(id = null) {
      const modal = document.getElementById('modalForm');
      const form = document.getElementById('supplierForm');
      const title = document.getElementById('modalTitle');
      
      if (id) {
        title.textContent = 'Edit Supplier';
        // Load data untuk edit
        fetch(`/suppliers/${id}`)
          .then(r => r.json())
          .then(data => {
            document.getElementById('supplierId').value = data.id;
            document.getElementById('supplierName').value = data.name || '';
            document.getElementById('supplierPhone').value = data.phone || '';
            document.getElementById('supplierLink').value = data.supplier_link || '';
          })
          .catch(err => swalError('Gagal memuat data supplier'));
      } else {
        title.textContent = 'Tambah Supplier';
        form.reset();
        document.getElementById('supplierId').value = '';
      }
      
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }

    function closeModal() {
      const modal = document.getElementById('modalForm');
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.getElementById('supplierForm').reset();
    }

    function editSupplier(id) {
      openModal(id);
    }

    function deleteSupplier(id) {
      swalConfirmFetch(`/suppliers/${id}`, { method: 'DELETE' }, 'Supplier berhasil dihapus', 'Gagal menghapus supplier');
    }

    document.getElementById('supplierForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const id = document.getElementById('supplierId').value;
      const name = document.getElementById('supplierName').value;
      const phone = document.getElementById('supplierPhone').value;
      const supplier_link = document.getElementById('supplierLink').value;
      
      const url = id ? `/suppliers/${id}` : '/suppliers';
      const method = id ? 'PUT' : 'POST';
      
      fetch(url, {
        method: method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name, phone, supplier_link })
      })
      .then(res => res.json().catch(() => ({})))
      .then(data => {
        if (data && data.success) {
          closeModal();
          swalSuccess('Supplier berhasil disimpan', true);
        } else {
          swalError(data && data.error ? data.error : 'Gagal menyimpan supplier');
        }
      })
      .catch(err => swalError(err.message));
    });

    // Search functionality (filter desktop table rows and mobile cards)
    document.getElementById('searchInput').addEventListener('input', function(e) {
      const search = e.target.value.toLowerCase();
      
      // Filter desktop table rows
      document.querySelectorAll('#suppliersTable tbody tr.supplier-row').forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(search) ? '' : 'none';
      });
      
      // Filter mobile cards
      document.querySelectorAll('.mobile-card').forEach(card => {
        const text = card.textContent.toLowerCase();
        card.style.display = text.includes(search) ? '' : 'none';
      });
    });

    // Close modal when clicking outside
    document.getElementById('modalForm').addEventListener('click', function(e) {
      if (e.target === this) {
        closeModal();
      }
    });
  </script>
</body>
</html>
