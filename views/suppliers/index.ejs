      <div class="flex flex-col md:flex-row gap-4">
        <div class="">
          <div class="relative">
            <input type="text" id="searchInput" placeholder="Cari supplier..." class="max-w-4xl pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
          </div>
        </div>
        <button onclick="location.reload()" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
          <i class="fas fa-sync-alt mr-2"></i>Refresh
        </button>
      </div>
    </div>

    <!-- Suppliers Table -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
      <% if (suppliers && suppliers.length > 0) { %>
        <!-- Table Header Stats -->
        <div class="bg-gradient-to-r from-orange-50 to-yellow-50 px-6 py-4 border-b border-orange-100">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-primary-gradient rounded-lg flex items-center justify-center shadow-md">
                <i class="fas fa-database text-white"></i>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-gray-700">Total Supplier</h3>
                <p class="text-2xl font-bold text-primary"><%= suppliers.length %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="overflow-x-auto">
          <table id="suppliersTable" class="min-w-full table-auto">
            <thead class="bg-gradient-to-r from-orange-500 to-yellow-500 text-white">
              <tr>
                <th class="px-4 py-4 text-left text-xs font-bold uppercase tracking-wider">
                  <div class="flex items-center gap-2">
                    <i class="fas fa-hashtag"></i>
                    <span>No</span>
                  </div>
                </th>
                <th class="px-4 py-4 text-left text-xs font-bold uppercase tracking-wider">
                  <div class="flex items-center gap-2">
                    <i class="fas fa-truck"></i>
                    <span>Nama Supplier</span>
                  </div>
                </th>
                <th class="px-4 py-4 text-left text-xs font-bold uppercase tracking-wider">
                  <div class="flex items-center gap-2">
                    <i class="fas fa-phone"></i>
                    <span>Telepon</span>
                  </div>
                </th>
                <th class="px-4 py-4 text-left text-xs font-bold uppercase tracking-wider">
                  <div class="flex items-center gap-2">
                    <i class="fas fa-box"></i>
                    <span>Barang</span>
                  </div>
                </th>
                <th class="px-4 py-4 text-left text-xs font-bold uppercase tracking-wider">
                  <div class="flex items-center gap-2">
                    <i class="fas fa-link"></i>
                    <span>Website</span>
                  </div>
                </th>
                <th class="px-4 py-4 text-left text-xs font-bold uppercase tracking-wider">
                  <div class="flex items-center gap-2">
                    <i class="fas fa-calendar"></i>
                    <span>Dibuat</span>
                  </div>
                </th>
                <th class="px-4 py-4 text-left text-xs font-bold uppercase tracking-wider">
                  <div class="flex items-center gap-2">
                    <i class="fas fa-clock"></i>
                    <span>Diperbarui</span>
                  </div>
                </th>
                <th class="px-4 py-4 text-center text-xs font-bold uppercase tracking-wider">
                  <div class="flex items-center justify-center gap-2">
                    <i class="fas fa-cog"></i>
                    <span>Aksi</span>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              <% suppliers.forEach((supplier, index) => { %>
                <tr class="supplier-row hover:bg-gradient-to-r hover:from-orange-50 hover:to-yellow-50 transition-all duration-200 group">
                  <td class="px-4 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gradient-to-br from-orange-400 to-yellow-400 text-white text-sm font-bold shadow-md">
                      <%= index + 1 %>
                    </span>
                  </td>
                  <td class="px-4 py-4">
                    <div class="flex items-center gap-3">
                      <div class="w-12 h-12 bg-gradient-to-br from-orange-400 to-yellow-400 rounded-xl flex items-center justify-center shadow-lg transform group-hover:scale-110 transition-transform duration-200">
                        <i class="fas fa-truck text-white text-lg"></i>
                      </div>
                      <div>
                        <div class="text-sm font-bold text-gray-900"><%= supplier.name %></div>
                        <div class="text-xs text-gray-500 flex items-center gap-1 mt-1 hidden">
                          <i class="fas fa-fingerprint"></i>
                          <span>ID: <%= supplier.id %></span>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap">
                    <% if (supplier.phone) { %>
                      <a href="https://wa.me/<%= supplier.phone.replace(/^0/, '62').replace(/\D/g, '') %>" 
                         target="_blank"
                         class="flex items-center gap-2 hover:bg-green-50 rounded-lg p-2 transition-all duration-200 group cursor-pointer">
                        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition-colors">
                          <i class="fab fa-whatsapp text-green-600 text-lg"></i>
                        </div>
                        <div>
                          <div class="text-sm font-semibold text-gray-900 group-hover:text-green-600 transition-colors"><%= supplier.phone %></div>
                          <div class="text-xs text-gray-500 group-hover:text-green-500 transition-colors">Chat WhatsApp</div>
                        </div>
                      </a>
                    <% } else { %>
                      <span class="text-sm text-gray-400 italic">Tidak ada</span>
                    <% } %>
                  </td>
                  <td class="px-4 py-4">
                    <% if (supplier.item_names) { %>
                      <div class="max-w-xs">
                        <div class="text-sm text-gray-700 line-clamp-2" title="<%= supplier.item_names %>">
                          <i class="fas fa-box text-primary mr-1"></i>
                          <%= supplier.item_names %>
                        </div>
                      </div>
                    <% } else { %>
                      <span class="text-sm text-gray-400 italic">Belum ada transaksi</span>
                    <% } %>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap">
                    <% if (supplier.supplier_link) { %>
                      <a href="<%= supplier.supplier_link %>" target="_blank" 
                         class="inline-flex items-center gap-2 px-3 py-2 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition-all duration-200 shadow-sm hover:shadow-md">
                        <i class="fas fa-external-link-alt"></i>
                        <span class="text-sm font-medium">Kunjungi</span>
                      </a>
                    <% } else { %>
                      <span class="text-sm text-gray-400 italic">Tidak ada</span>
                    <% } %>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-700">
                      <div class="flex items-center gap-2">
                        <i class="fas fa-calendar-plus text-green-500"></i>
                        <span class="font-medium"><%= new Date(supplier.created_at).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' }) %></span>
                      </div>
                      <div class="text-xs text-gray-500 mt-1">
                        <%= new Date(supplier.created_at).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) %> WIB
                      </div>
                    </div>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-700">
                      <div class="flex items-center gap-2">
                        <i class="fas fa-clock text-blue-500"></i>
                        <span class="font-medium"><%= new Date(supplier.updated_at).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' }) %></span>
                      </div>
                      <div class="text-xs text-gray-500 mt-1">
                        <%= new Date(supplier.updated_at).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) %> WIB
                      </div>
                    </div>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap text-center">
                    <div class="inline-flex items-center gap-2">
                      <button onclick="editSupplier('<%= supplier.id %>')" 
                              class="group/btn relative p-2.5 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition-all duration-200 shadow-md hover:shadow-lg transform hover:scale-110"
                              title="Edit Supplier">
                        <i class="fas fa-edit"></i>
                        <span class="absolute hidden group-hover/btn:block -top-8 left-1/2 transform -translate-x-1/2 bg-gray-900 text-white text-xs px-2 py-1 rounded whitespace-nowrap">
                          Edit
                        </span>
                      </button>
                      <button onclick="deleteSupplier('<%= supplier.id %>')" 
                              class="group/btn relative p-2.5 bg-red-500 hover:bg-red-600 text-white rounded-lg transition-all duration-200 shadow-md hover:shadow-lg transform hover:scale-110"
                              title="Hapus Supplier">
                        <i class="fas fa-trash"></i>
                        <span class="absolute hidden group-hover/btn:block -top-8 left-1/2 transform -translate-x-1/2 bg-gray-900 text-white text-xs px-2 py-1 rounded whitespace-nowrap">
                          Hapus
                        </span>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- Mobile Responsive Cards (shown only on small screens) -->
        <div class="block lg:hidden divide-y divide-gray-200">
          <% suppliers.forEach((supplier, index) => { %>
            <div class="mobile-card p-4 hover:bg-gradient-to-r hover:from-orange-50 hover:to-yellow-50 transition-all duration-200">
              <div class="flex items-start justify-between mb-3">
                <div class="flex items-center gap-3">
                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gradient-to-br from-orange-400 to-yellow-400 text-white text-sm font-bold shadow-md">
                    <%= index + 1 %>
                  </span>
                  <div class="w-10 h-10 bg-gradient-to-br from-orange-400 to-yellow-400 rounded-xl flex items-center justify-center shadow-md">
                    <i class="fas fa-truck text-white"></i>
                  </div>
                </div>
                <div class="flex gap-2">
                  <button onclick="editSupplier('<%= supplier.id %>')" 
                          class="p-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg shadow-md">
                    <i class="fas fa-edit text-sm"></i>
                  </button>
                  <button onclick="deleteSupplier('<%= supplier.id %>')" 
                          class="p-2 bg-red-500 hover:bg-red-600 text-white rounded-lg shadow-md">
                    <i class="fas fa-trash text-sm"></i>
                  </button>
                </div>
              </div>
              <div class="mb-3">
                <h3 class="text-base font-bold text-gray-900 mb-1"><%= supplier.name %></h3>
                <p class="text-xs text-gray-500 flex items-center gap-1">
                  <i class="fas fa-fingerprint"></i>
                  <span>ID: <%= supplier.id %></span>
                </p>
              </div>
              
              <!-- Contact Info -->
              <div class="mb-3 space-y-2">
                <% if (supplier.phone) { %>
                  <a href="https://wa.me/<%= supplier.phone.replace(/^0/, '62').replace(/\D/g, '') %>" 
                     target="_blank"
                     class="flex items-center gap-2 text-sm bg-green-50 rounded-lg p-2 hover:bg-green-100 transition-all duration-200">
                    <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                      <i class="fab fa-whatsapp text-green-600"></i>
                    </div>
                    <div>
                      <span class="font-medium text-gray-900"><%= supplier.phone %></span>
                      <div class="text-xs text-green-600">Chat WhatsApp</div>
                    </div>
                  </a>
                <% } %>
                
                <% if (supplier.supplier_link) { %>
                  <a href="<%= supplier.supplier_link %>" target="_blank" 
                     class="flex items-center gap-2 text-sm text-blue-600">
                    <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                      <i class="fas fa-external-link-alt text-blue-600 text-xs"></i>
                    </div>
                    <span class="font-medium">Kunjungi Website</span>
                  </a>
                <% } %>
              </div>

              <!-- Items -->
              <% if (supplier.item_names) { %>
                <div class="mb-3 bg-gray-50 rounded-lg p-3">
                  <div class="text-xs text-gray-600 font-semibold mb-1">
                    <i class="fas fa-box mr-1"></i>Barang:
                  </div>
                  <div class="text-sm text-gray-700"><%= supplier.item_names %></div>
                </div>
              <% } %>

              <!-- Timestamps -->
