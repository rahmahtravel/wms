                  <div class="relative w-24 h-24 md:w-28 md:h-28 rounded-2xl bg-white/95 backdrop-blur-sm flex items-center justify-center shadow-2xl transform group-hover:scale-105 transition-transform duration-300 p-3">
                    <img src="/images/logo.png" alt="Logo" class="w-full h-full object-contain">
                  </div>
                </div>
              </div>
              
              <!-- Text Content -->
              <div class="flex-1 text-center md:text-left">
                <h1 class="text-2xl md:text-3xl lg:text-4xl font-black leading-tight text-white mb-2 tracking-tight">
                  Data Supplier
                </h1>
                <p class="text-base md:text-lg text-white/90 font-medium max-w-2xl">
                  <i class="fas fa-handshake mr-2"></i>Kelola data supplier dan vendor pengadaan barang
                </p>
              </div>

              <!-- Quick Stats Badge & Action Button -->
              <div class="flex-none hidden lg:block">
                <div class="rounded-2xl p-4">
                  <button onclick="openModal()" class="block w-full px-6 py-3 bg-white/90 text-primary-dark font-bold rounded-xl hover:bg-white transition-all shadow-lg hover:shadow-xl transform hover:scale-105 mb-3 text-center">
                    <i class="fas fa-plus mr-2"></i>Tambah Supplier
                  </button>
                </div>
              </div>
            </div>

            <!-- Mobile Action Button -->
            <div class="flex-none lg:hidden w-full md:w-auto mt-4">
              <button onclick="openModal()" class="block w-full px-6 py-3 bg-white/90 text-primary-dark font-bold rounded-xl hover:bg-white transition-all shadow-lg hover:shadow-xl transform hover:scale-105 text-center">
                <i class="fas fa-plus mr-2"></i>Tambah Supplier
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Search and Filter -->
