<!DOCTYPE html>
<html lang="id">
<head>
  <%- include('../partials/head', { title: title }) %>
  <style>
    .detail-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      padding: 24px;
      margin-bottom: 20px;
    }
    
    .detail-row {
      display: flex;
      padding: 12px 0;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .detail-row:last-child {
      border-bottom: none;
    }
    
    .detail-label {
      font-weight: 600;
      color: #6b7280;
      width: 200px;
      flex-shrink: 0;
    }
    
    .detail-value {
      color: #1f2937;
      flex: 1;
    }
  </style>
</head>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>
  <%- include('../partials/sidebar') %>

  <main id="mainContent" class="ml-64 mt-16 p-4 md:p-6 lg:p-8 transition-all duration-300 min-h-screen">
    <!-- Page Header -->
    <div class="mb-6 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
          <i class="fas fa-clipboard-check text-purple-600 mr-2"></i>Detail Stock Opname
        </h1>
        <nav class="text-sm text-gray-600">
          <a href="/opname" class="hover:text-purple-600">Stock Opname</a>
          <span class="mx-2">/</span>
          <span class="text-gray-800">Detail</span>
        </nav>
      </div>
      <div class="flex gap-3">
        <a href="/opname" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition">
          <i class="fas fa-arrow-left mr-2"></i>Kembali
        </a>
      </div>
    </div>

    <!-- Detail Content -->
    <div class="max-w-4xl">
      <!-- Main Information -->
      <div class="detail-card">
        <h2 class="text-xl font-bold text-gray-800 mb-4 pb-3 border-b-2 border-purple-600">
          <i class="fas fa-info-circle text-purple-600 mr-2"></i>Informasi Barang
        </h2>
        
        <div class="detail-row">
          <div class="detail-label">
            <i class="fas fa-barcode mr-2 text-purple-600"></i>Kode Barang
          </div>
          <div class="detail-value">
            <span class="font-mono font-semibold bg-purple-100 px-3 py-1 rounded"><%= record.kode_barang %></span>
          </div>
        </div>
        
        <div class="detail-row">
          <div class="detail-label">
            <i class="fas fa-box mr-2 text-purple-600"></i>Nama Barang
          </div>
          <div class="detail-value font-semibold">
            <%= record.nama_barang %>
          </div>
        </div>
        
        <div class="detail-row">
          <div class="detail-label">
            <i class="fas fa-cubes mr-2 text-purple-600"></i>Jumlah
          </div>
          <div class="detail-value">
            <span class="text-2xl font-bold text-purple-600"><%= record.jumlah %></span> unit
          </div>
        </div>
        
        <div class="detail-row">
          <div class="detail-label">
            <i class="fas fa-calendar-alt mr-2 text-purple-600"></i>Tanggal Stock Opname
          </div>
          <div class="detail-value">
            <%= new Date(record.tanggal_stockopname).toLocaleDateString('id-ID', { 
              weekday: 'long',
              day: '2-digit', 
              month: 'long', 
              year: 'numeric', 
              hour: '2-digit', 
              minute: '2-digit' 
            }) %>
          </div>
        </div>
        
        <div class="detail-row">
          <div class="detail-label">
            <i class="fas fa-flag mr-2 text-purple-600"></i>Status
          </div>
          <div class="detail-value">
            <% if (record.status === 'completed') { %>
              <span class="px-4 py-2 inline-flex text-sm font-semibold rounded-lg bg-green-100 text-green-800">
                <i class="fas fa-check-circle mr-2"></i> Completed
              </span>
            <% } else if (record.status === 'applied') { %>
              <span class="px-4 py-2 inline-flex text-sm font-semibold rounded-lg bg-blue-100 text-blue-800">
                <i class="fas fa-check-double mr-2"></i> Applied
              </span>
            <% } else { %>
              <span class="px-4 py-2 inline-flex text-sm font-semibold rounded-lg bg-gray-100 text-gray-800">
                <i class="fas fa-clock mr-2"></i> Draft
              </span>
            <% } %>
          </div>
        </div>
        
        <div class="detail-row">
          <div class="detail-label">
            <i class="fas fa-user-circle mr-2 text-purple-600"></i>User
          </div>
          <div class="detail-value">
            <%= record.user_name || '-' %>
          </div>
        </div>
      </div>

      <!-- Serial Numbers Section -->
      <% if (record.no_seri_unit) { %>
        <% 
          let serialNumbers = [];
          try {
            serialNumbers = typeof record.no_seri_unit === 'string' 
              ? JSON.parse(record.no_seri_unit) 
              : record.no_seri_unit;
          } catch (e) {
            serialNumbers = [];
          }
        %>
        <% if (Array.isArray(serialNumbers) && serialNumbers.length > 0) { %>
          <div class="detail-card">
            <h2 class="text-xl font-bold text-gray-800 mb-4 pb-3 border-b-2 border-purple-600">
              <i class="fas fa-hashtag text-purple-600 mr-2"></i>Nomor Seri / Barcode
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
              <% serialNumbers.forEach((serial, index) => { %>
                <div class="bg-gray-50 border border-gray-200 rounded-lg px-4 py-3">
                  <div class="text-xs text-gray-500 mb-1">Serial #<%= index + 1 %></div>
                  <div class="font-mono font-semibold text-gray-800"><%= serial %></div>
                </div>
              <% }); %>
            </div>
          </div>
        <% } %>
      <% } %>

      <!-- Notes Section -->
      <% if (record.keterangan) { %>
        <div class="detail-card">
          <h2 class="text-xl font-bold text-gray-800 mb-4 pb-3 border-b-2 border-purple-600">
            <i class="fas fa-sticky-note text-purple-600 mr-2"></i>Keterangan
          </h2>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
            <p class="text-gray-700"><%= record.keterangan %></p>
          </div>
        </div>
      <% } %>

      <!-- Metadata Section -->
      <div class="detail-card bg-gray-50">
        <h2 class="text-lg font-bold text-gray-700 mb-3">
          <i class="fas fa-clock mr-2 text-gray-600"></i>Informasi Sistem
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
          <div>
            <span class="font-semibold">Dibuat:</span> 
            <%= record.created_at ? new Date(record.created_at).toLocaleString('id-ID') : '-' %>
          </div>
          <div>
            <span class="font-semibold">Diupdate:</span> 
            <%= record.updated_at ? new Date(record.updated_at).toLocaleString('id-ID') : '-' %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>
</body>
</html>
