            <p class="text-red-100 text-sm mt-1">Items require immediate restocking</p>
          </div>
          <div class="text-right">
            <div class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm rounded-lg">
              <i class="fas fa-box-open mr-2"></i>
              <span class="font-bold"><%= lowStock.length %> Items</span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="p-6">
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead>
              <tr class="border-b-2 border-gray-200">
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  <i class="fas fa-box mr-2 text-red-500"></i>Nama Barang
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  <i class="fas fa-chart-line mr-2 text-blue-500"></i>Stok Minimal
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  <i class="fas fa-warehouse mr-2 text-green-500"></i>Stok Saat Ini
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  <i class="fas fa-flag mr-2 text-orange-500"></i>Status
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% lowStock.forEach((item, index) => { %>
                <tr class="hover:bg-gradient-to-r hover:from-red-50 hover:to-rose-50 transition-all duration-200 group" style="animation: fadeInUp 0.4s ease-out <%= index * 0.05 %>s both;">
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="flex-none p-2 bg-red-100 rounded-lg mr-3 group-hover:bg-red-200 transition-colors">
                        <i class="fas fa-cube text-red-600"></i>
                      </div>
                      <div>
                        <p class="text-sm font-bold text-gray-900"><%= item.nama_barang %></p>
                        <p class="text-xs text-gray-500 mt-1"><%= item.kode_barang || 'N/A' %></p>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="px-3 py-1 bg-blue-100 text-blue-700 rounded-lg font-bold text-sm">
                        <%= item.stock_minimal %>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="px-3 py-1 bg-orange-100 text-orange-700 rounded-lg font-bold text-sm">
                        <%= item.current_stock || 0 %>
                      </div>
                      <% if ((item.current_stock || 0) < item.stock_minimal) { %>
                        <span class="ml-2 text-xs text-red-600 font-semibold">
                          (<%= Math.abs(item.stock_minimal - (item.current_stock || 0)) %> kurang)
                        </span>
                      <% } %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center px-4 py-2 text-xs font-bold rounded-xl bg-gradient-to-r from-red-500 to-rose-600 text-white shadow-md group-hover:shadow-lg transition-shadow">
                      <i class="fas fa-exclamation-circle mr-2 animate-pulse"></i>
                      Perlu Restock Segera
                    </span>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      
      <!-- Action Footer -->
      <div class="bg-gradient-to-r from-gray-50 to-red-50 px-6 py-4 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <p class="text-sm text-gray-600">
            <i class="fas fa-info-circle mr-2 text-red-500"></i>
            Total <strong class="text-red-600"><%= lowStock.length %></strong> barang memerlukan perhatian segera
          </p>
          <a href="/stock" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-red-500 to-rose-600 text-white rounded-lg font-semibold hover:shadow-lg transition-all duration-300 hover:scale-105">
            <i class="fas fa-eye mr-2"></i>
            Lihat Detail Stock
          </a>
        </div>
      </div>
    </div>
  <% } %>
</main>
  
  <%- include('../partials/footer') %>
  
  <%- include('../partials/scripts') %>
</body>
</html>
