                  <label class="block text-sm font-semibold text-gray-600 mb-1">Tipe Lokasi</label>
                  <div class="bg-white px-4 py-3 rounded-lg border border-blue-200 flex items-center">
                    <i class="fas fa-map-marker-alt text-blue-600 mr-2"></i>
                    <span class="font-medium text-gray-800">${location.tipe_lokasi}</span>
                  </div>
                </div>
                <div>
                  <label class="block text-sm font-semibold text-gray-600 mb-1">Cabang</label>
                  <div class="bg-white px-4 py-3 rounded-lg border border-blue-200 flex items-center">
                    <i class="fas fa-building text-blue-600 mr-2"></i>
                    <span class="font-medium text-gray-800">${location.branch_name || '-'}</span>
                  </div>
                </div>
