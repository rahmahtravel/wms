                    <i class="fas fa-user-tie text-purple-600 mr-2"></i>
                    <span class="font-medium text-gray-800">${location.pic || '-'}</span>
                  </div>
                </div>
                <div>
                  <label class="block text-sm font-semibold text-gray-600 mb-1">Nomor Telepon</label>
                  <div class="bg-white px-4 py-3 rounded-lg border border-purple-200 flex items-center">
                    <i class="fas fa-phone text-purple-600 mr-2"></i>
                    <span class="font-medium text-gray-800">${location.telepon || '-'}</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Address Section -->
            <div class="bg-gradient-to-br from-orange-50 to-yellow-50 rounded-xl p-6 border border-orange-200">
              <h3 class="text-lg font-bold text-orange-900 mb-4 flex items-center">
                <i class="fas fa-map-marked-alt text-orange-600 mr-2"></i>Alamat Lengkap
              </h3>
              <div class="bg-white px-4 py-3 rounded-lg border border-orange-200">
                <p class="text-gray-800 leading-relaxed">${location.alamat || '-'}</p>
              </div>
            </div>

            <!-- Statistics Section (if applicable) -->
            <div class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl p-6 border border-indigo-200">
              <h3 class="text-lg font-bold text-indigo-900 mb-4 flex items-center">
                <i class="fas fa-chart-bar text-indigo-600 mr-2"></i>Informasi Tambahan
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-white px-4 py-3 rounded-lg border border-indigo-200 text-center">
                  <div class="text-2xl font-bold text-indigo-600 mb-1">
                    <i class="fas fa-layer-group"></i>
                  </div>
                  <div class="text-xs font-semibold text-gray-600 mb-1">Total Rak</div>
                  <div class="text-lg font-bold text-gray-800">-</div>
                </div>
                <div class="bg-white px-4 py-3 rounded-lg border border-indigo-200 text-center">
                  <div class="text-2xl font-bold text-indigo-600 mb-1">
                    <i class="fas fa-box"></i>
                  </div>
                  <div class="text-xs font-semibold text-gray-600 mb-1">Total Bin</div>
                  <div class="text-lg font-bold text-gray-800">-</div>
                </div>
                <div class="bg-white px-4 py-3 rounded-lg border border-indigo-200 text-center">
                  <div class="text-2xl font-bold text-indigo-600 mb-1">
                    <i class="fas fa-cubes"></i>
                  </div>
                  <div class="text-xs font-semibold text-gray-600 mb-1">Status</div>
                  <div class="text-lg font-bold text-green-600">Aktif</div>
                </div>
              </div>
            </div>

            <!-- Audit Trail Section -->
            <div class="bg-gradient-to-br from-teal-50 to-cyan-50 rounded-xl p-6 border border-teal-200">
              <h3 class="text-lg font-bold text-teal-900 mb-4 flex items-center">
                <i class="fas fa-user-shield text-teal-600 mr-2"></i>Informasi Audit
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-semibold text-gray-600 mb-1">Dibuat Oleh</label>
                  <div class="bg-white px-4 py-3 rounded-lg border border-teal-200 flex items-center">
                    <i class="fas fa-user-plus text-teal-600 mr-2"></i>
                    <span class="font-medium text-gray-800">${location.created_by_name || '-'}</span>
                  </div>
                  <div class="text-xs text-gray-500 mt-1 ml-1">
                    <i class="fas fa-calendar-plus mr-1"></i>
                    ${location.created_at ? new Date(location.created_at).toLocaleDateString('id-ID', { 
                      day: 'numeric', month: 'short', year: 'numeric',
                      hour: '2-digit', minute: '2-digit' 
                    }) : '-'}
                  </div>
                </div>
                <div>
                  <label class="block text-sm font-semibold text-gray-600 mb-1">Diperbarui Oleh</label>
                  <div class="bg-white px-4 py-3 rounded-lg border border-teal-200 flex items-center">
                    <i class="fas fa-user-edit text-teal-600 mr-2"></i>
                    <span class="font-medium text-gray-800">${location.updated_by_name || '-'}</span>
                  </div>
                  <div class="text-xs text-gray-500 mt-1 ml-1">
                    <i class="fas fa-calendar-check mr-1"></i>
                    ${location.updated_at ? new Date(location.updated_at).toLocaleDateString('id-ID', { 
                      day: 'numeric', month: 'short', year: 'numeric',
                      hour: '2-digit', minute: '2-digit' 
                    }) : '-'}
                  </div>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex gap-3 pt-2">
              <button onclick="closeDetailModal(); openEditModal(${location.id});" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium shadow-lg">
                <i class="fas fa-edit mr-2"></i>Edit Lokasi
              </button>
              <button onclick="closeDetailModal();" class="flex-1 px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-medium">
                <i class="fas fa-times mr-2"></i>Tutup
              </button>
            </div>
          </div>
        `;

        document.getElementById('detailContent').innerHTML = detailHTML;
        document.getElementById('detailModal').classList.remove('hidden');
      } catch (error) {
        console.error('Error loading location details:', error);
        swalError('Gagal memuat detail lokasi');
      }
    }

    function closeDetailModal() {
      document.getElementById('detailModal').classList.add('hidden');
      document.getElementById('detailContent').innerHTML = '';
    }

    // Event delegation for detail/edit/delete buttons (avoid inline onclick with EJS expressions)
    document.addEventListener('click', function (e) {
      const detailBtn = e.target.closest('.btn-detail');
      if (detailBtn) {
        const id = detailBtn.dataset.id;
        if (id) viewDetail(id);
        return;
      }

      const editBtn = e.target.closest('.btn-edit');
      if (editBtn) {
        const id = editBtn.dataset.id;
        if (id) openEditModal(id);
        return;
      }

      const delBtn = e.target.closest('.btn-delete');
      if (delBtn) {
        const id = delBtn.dataset.id;
        if (id) deleteLocation(id);
        return;
      }
    });
    
    // Close modal on ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeModal();
        closeDetailModal();
      }
    });
  </script>
</body>
</html>
