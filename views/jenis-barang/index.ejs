                    <%= new Date(jenis.updated_at).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                  </div>
                  <div class="text-gray-500 text-xs mt-0.5">
                    <%= new Date(jenis.updated_at).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) %>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="p-12 text-center">
          <i class="fas fa-box-open text-6xl text-gray-300 mb-4"></i>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">Belum Ada Barang</h3>
          <p class="text-gray-500 mb-6">Mulai dengan menambahkan barang pertama Anda</p>
          <button onclick="openModal()" class="inline-flex items-center px-5 py-2.5 bg-primary text-white rounded-lg hover:bg-primary-dark transition">
            <i class="fas fa-plus mr-2"></i>Tambah Barang
          </button>
        </div>
      <% } %>
    </div>
  </main>

  <!-- Modal Form -->
  <div id="modalForm" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-lg w-full transform transition-all">
          <div class="bg-primary-gradient text-white p-6 rounded-t-2xl">
        <h2 class="text-2xl font-bold" id="modalTitle">Tambah Jenis Barang</h2>
      </div>
      <form id="jenisForm" class="p-6">
        <input type="hidden" id="jenisId">
        <div class="mb-4">
          <label class="block text-gray-700 font-medium mb-2">
            <i class="fas fa-cube mr-2 text-primary"></i>Nama Jenis
          </label>
          <input type="text" id="namaJenis" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Contoh: Pakaian, Tas, dll">
        </div>
        <div class="mb-6">
          <label class="block text-gray-700 font-medium mb-2">
            <i class="fas fa-align-left mr-2 text-primary"></i>Deskripsi
          </label>
          <textarea id="deskripsi" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Deskripsi jenis barang (opsional)"></textarea>
        </div>
        <div class="flex gap-3">
          <button type="button" onclick="closeModal()" class="flex-1 px-4 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium">
            <i class="fas fa-times mr-2"></i>Batal
          </button>
          <button type="submit" class="flex-1 px-4 py-3 bg-primary-gradient text-white rounded-lg hover:from-primary-dark hover:to-primary transition font-medium shadow-md">
            <i class="fas fa-save mr-2"></i>Simpan
          </button>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>

  <script>
    function openModal(id = null) {
      const modal = document.getElementById('modalForm');
      const form = document.getElementById('jenisForm');
      const title = document.getElementById('modalTitle');
      
      if (id) {
        title.textContent = 'Edit Jenis Barang';
        fetch(`/jenis-barang/${id}`)
          .then(r => r.json())
          .then(data => {
            document.getElementById('jenisId').value = data.id;
            document.getElementById('namaJenis').value = data.nama_jenis;
            document.getElementById('deskripsi').value = data.deskripsi || '';
          });
      } else {
        title.textContent = 'Tambah Jenis Barang';
        form.reset();
      }
      
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }

    function closeModal() {
      const modal = document.getElementById('modalForm');
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.getElementById('jenisForm').reset();
    }

    function editJenis(id) {
      openModal(id);
    }

    function deleteJenis(id) {
      swalConfirmFetch(`/jenis-barang/${id}`, { method: 'DELETE' }, 'Jenis barang berhasil dihapus', 'Gagal menghapus jenis barang');
    }

    document.getElementById('jenisForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const id = document.getElementById('jenisId').value;
      const nama_jenis = document.getElementById('namaJenis').value;
      const deskripsi = document.getElementById('deskripsi').value;
      
      const url = id ? `/jenis-barang/${id}` : '/jenis-barang';
      const method = id ? 'PUT' : 'POST';
      
      fetch(url, {
        method: method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ nama_jenis, deskripsi })
      })
      .then(res => res.json().catch(() => ({})))
      .then(data => {
        if (data && data.success) {
          closeModal();
          swalSuccess('Jenis barang berhasil disimpan', true);
        } else {
          swalError(data && data.error ? data.error : 'Gagal menyimpan jenis barang');
        }
      })
      .catch(err => swalError(err.message));
    });

    // View detail function
    function viewDetail(id) {
      fetch(`/jenis-barang/${id}`)
        .then(r => r.json())
        .then(data => {
          Swal.fire({
            title: '<strong><i class="fas fa-layer-group mr-2"></i>Detail Jenis Barang</strong>',
            html: `
              <div class="text-left space-y-4">
                <div class="bg-gradient-to-r from-orange-50 to-yellow-50 rounded-lg p-4 mb-4">
                  <div class="flex items-center gap-3">
                    <div class="w-14 h-14 bg-gradient-to-br from-orange-400 to-yellow-400 rounded-xl flex items-center justify-center shadow-lg">
                      <i class="fas fa-layer-group text-white text-xl"></i>
                    </div>
                    <div class="flex-1">
                      <h3 class="text-xl font-bold text-gray-900">${data.nama_jenis}</h3>
                      <p class="text-sm text-gray-600"><i class="fas fa-fingerprint mr-1"></i>ID: ${data.id}</p>
                    </div>
                  </div>
                </div>

                ${data.deskripsi ? `
                <div class="bg-blue-50 rounded-lg p-4">
                  <p class="text-sm font-semibold text-blue-900 mb-2"><i class="fas fa-align-left mr-2"></i>Deskripsi:</p>
                  <p class="text-sm text-gray-700">${data.deskripsi}</p>
                </div>
                ` : '<div class="bg-gray-50 rounded-lg p-4 text-center text-gray-500 text-sm italic">Tidak ada deskripsi</div>'}

                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4">
                  <div class="flex items-center justify-center gap-3">
                    <i class="fas fa-boxes text-blue-600 text-2xl"></i>
                    <div class="text-center">
                      <p class="text-3xl font-bold text-blue-600">${data.total_items || 0}</p>
                      <p class="text-sm text-gray-600">Item Terkait</p>
                    </div>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-3">
                  <div class="bg-green-50 rounded-lg p-3">
                    <p class="text-xs text-green-600 font-semibold mb-1"><i class="fas fa-calendar-plus mr-1"></i>Dibuat</p>
                    <p class="font-bold text-sm text-gray-900">${new Date(data.created_at).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' })}</p>
                    <p class="text-xs text-gray-500">${new Date(data.created_at).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' })} WIB</p>
                  </div>
                  <div class="bg-blue-50 rounded-lg p-3">
                    <p class="text-xs text-blue-600 font-semibold mb-1"><i class="fas fa-clock mr-1"></i>Diperbarui</p>
                    <p class="font-bold text-sm text-gray-900">${new Date(data.updated_at).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' })}</p>
                    <p class="text-xs text-gray-500">${new Date(data.updated_at).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' })} WIB</p>
                  </div>
                </div>
              </div>
            `,
            showCloseButton: true,
            showConfirmButton: false,
            width: '600px',
            customClass: {
              popup: 'rounded-2xl',
              title: 'text-gray-900'
            }
          });
        })
        .catch(err => swalError('Gagal memuat detail jenis barang'));
    }

    // Search functionality (filter desktop table rows and mobile cards)
    document.getElementById('searchInput').addEventListener('input', function(e) {
      const search = e.target.value.toLowerCase();
      
      // Filter desktop table rows
      document.querySelectorAll('.jenis-row').forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(search) ? '' : 'none';
      });
      
      // Filter mobile cards
      document.querySelectorAll('.mobile-card').forEach(card => {
        const text = card.textContent.toLowerCase();
        card.style.display = text.includes(search) ? '' : 'none';
      });
    });
  </script>
</body>
</html>
