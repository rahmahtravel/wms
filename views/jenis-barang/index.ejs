      <% if (jenisBarang && jenisBarang.length > 0) { %>
        <!-- Table Header Stats -->
        <div class="bg-gradient-to-r from-orange-50 to-yellow-50 px-6 py-4 border-b border-orange-100">
          <div class="flex items-center justify-between flex-wrap gap-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-primary-gradient rounded-lg flex items-center justify-center shadow-md">
                <i class="fas fa-database text-white"></i>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-gray-700">Total Jenis Barang</h3>
                <p class="text-2xl font-bold text-primary"><%= jenisBarang.length %></p>
              </div>
            </div>
          </div>
        </div>

