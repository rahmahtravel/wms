                          class="p-2.5 bg-green-500 hover:bg-green-600 text-white rounded-lg shadow-md">
                    <i class="fas fa-eye text-sm"></i>
                  </button>
                  <button onclick="editJenis('<%= jenis.id %>')" 
                          class="p-2.5 bg-blue-500 hover:bg-blue-600 text-white rounded-lg shadow-md">
                    <i class="fas fa-edit text-sm"></i>
                  </button>
                  <button onclick="deleteJenis('<%= jenis.id %>')" 
                          class="p-2.5 bg-red-500 hover:bg-red-600 text-white rounded-lg shadow-md">
                    <i class="fas fa-trash text-sm"></i>
                  </button>
                </div>
              </div>

              <!-- Main Info -->
              <div class="mb-4">
                <h3 class="text-lg font-bold text-gray-900 mb-2 flex items-center gap-2">
                  <i class="fas fa-layer-group text-primary"></i>
                  <%= jenis.nama_jenis %>
                </h3>
                <p class="text-xs text-gray-500 flex items-center gap-1 mb-3">
                  <i class="fas fa-fingerprint"></i>
                  <span>ID: <%= jenis.id %></span>
                </p>
                
                <% if (jenis.deskripsi) { %>
                  <div class="bg-gray-50 rounded-lg p-3 mb-3">
                    <div class="text-xs text-gray-600 font-semibold mb-1 flex items-center gap-1">
                      <i class="fas fa-align-left"></i>
                      Deskripsi:
                    </div>
