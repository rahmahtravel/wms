                    <span class="font-semibold">Dibuat</span>
                  </div>
                  <div class="text-gray-700 font-medium">
                    <%= new Date(jenis.created_at).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' }) %>
