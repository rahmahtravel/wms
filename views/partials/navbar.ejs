<!-- Simplified & Reliable Dropdown Toggle Script -->
<script>
(function() {
  'use strict';
  
    function initUserMenu() {
    const userMenuBtn = document.getElementById('userMenuBtn');
    const userMenu = document.getElementById('userMenu');
    
    if (!userMenuBtn || !userMenu) {
      console.error('User menu elements not found');
      return;
    }
    
    // Ensure initial closed state
    userMenu.classList.remove('show');
    
    // Positioning helper: clamp dropdown within viewport on desktop, mobile keeps fixed full-width behaviour
    function positionUserMenu() {
      try {
        const isMobile = window.innerWidth <= 640;
        // ensure dropdown is visible to measure
        userMenu.style.display = 'block';

        if (isMobile) {
          // mobile: fixed under navbar using CSS rules; align to right small offset
          userMenu.style.position = 'fixed';
          const nav = document.querySelector('.modern-navbar');
          const navH = nav ? nav.getBoundingClientRect().height : 56;
          userMenu.style.top = (navH + 8) + 'px';
          userMenu.style.right = '10px';
          userMenu.style.left = 'auto';
        } else {
          // desktop: position fixed relative to viewport and clamp within edges
          userMenu.style.position = 'fixed';
          userMenu.style.right = 'auto';

          const btnRect = userMenuBtn.getBoundingClientRect();
          const ddRect = userMenu.getBoundingClientRect();
          const ddW = ddRect.width || userMenu.offsetWidth || 250;
          const ddH = ddRect.height || userMenu.offsetHeight || 200;
          const vw = window.innerWidth;
          const vh = window.innerHeight;

          // prefer aligning dropdown right edge with button right edge
          let left = Math.round(btnRect.right - ddW);
          // clamp left between 8 and vw - ddW - 8
          left = Math.max(8, Math.min(left, vw - ddW - 8));

          // compute top below the button; if would overflow bottom, move it upward
          let top = Math.round(btnRect.bottom + 8);
          if (top + ddH + 8 > vh) {
            // try placing above button
            const altTop = Math.round(btnRect.top - ddH - 8);
            if (altTop > 8) top = altTop;
            else top = Math.max(8, vh - ddH - 8);
          }

          userMenu.style.left = left + 'px';
          userMenu.style.top = top + 'px';
        }
      } catch (err) {
        // fallback: let CSS handle it
        userMenu.style.left = '';
        userMenu.style.top = '';
        userMenu.style.position = '';
        userMenu.style.right = '';
      }
    }

    // Reliable toggle: respond to pointerdown (fast on touch/mouse) and click as fallback
    function toggleMenu(e) {
      // stop propagation so document click handler doesn't immediately close it
      if (e && e.stopPropagation) e.stopPropagation();
      const isShowing = userMenu.classList.contains('show');
      if (isShowing) {
        userMenu.classList.remove('show');
        userMenuBtn.setAttribute('aria-expanded','false');
        // reset inline positioning to let CSS take over
        userMenu.style.left = '';
        userMenu.style.top = '';
        userMenu.style.position = 'absolute';
        userMenu.style.right = '0';
      } else {
        userMenu.classList.add('show');
        userMenuBtn.setAttribute('aria-expanded','true');
        // compute position and clamp within viewport
        positionUserMenu();
      }
    }

    userMenuBtn.addEventListener('pointerdown', function(e) { toggleMenu(e); });
    userMenuBtn.addEventListener('click', function(e) { /* ensure click still toggles for browsers without pointer events */ toggleMenu(e); });
    
    // Close when clicking/tapping outside
    document.addEventListener('pointerdown', function(e) {
      if (!userMenuBtn.contains(e.target) && !userMenu.contains(e.target)) {
        userMenu.classList.remove('show');
        userMenuBtn.setAttribute('aria-expanded','false');
        // reset inline positioning
        userMenu.style.left = '';
        userMenu.style.top = '';
        userMenu.style.position = 'absolute';
        userMenu.style.right = '0';
      }
    });
    
    // Close with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        userMenu.classList.remove('show');
      }
    });
    
    // Close on menu item click (except logout which needs confirmation)
    const menuItems = userMenu.querySelectorAll('.dropdown-item:not(#logoutBtn)');
    menuItems.forEach(function(item) {
      item.addEventListener('click', function() {
        userMenu.classList.remove('show');
        userMenuBtn.setAttribute('aria-expanded','false');
        userMenu.style.left = '';
        userMenu.style.top = '';
        userMenu.style.position = 'absolute';
        userMenu.style.right = '0';
      });
    });

    // Reposition on resize if open
    window.addEventListener('resize', function() {
      if (userMenu.classList.contains('show')) positionUserMenu();
    });
  }
  
  // Logout confirmation modal handler
  function initLogoutModal() {
    const logoutBtn = document.getElementById('logoutBtn');
    const logoutModal = document.getElementById('logoutModal');
    const logoutCancelBtn = document.getElementById('logoutCancelBtn');
    const logoutConfirmBtn = document.getElementById('logoutConfirmBtn');
    const userMenu = document.getElementById('userMenu');
    
    if (!logoutBtn || !logoutModal) return;
    
    // Show modal when logout is clicked
    logoutBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      logoutModal.classList.add('show');
      if (userMenu) userMenu.classList.remove('show');
    });
    
    // Close modal on cancel
    if (logoutCancelBtn) {
      logoutCancelBtn.addEventListener('click', function() {
        logoutModal.classList.remove('show');
      });
    }
    
    // Confirm logout - redirect to logout URL
    if (logoutConfirmBtn) {
      logoutConfirmBtn.addEventListener('click', function() {
        window.location.href = '/logout';
      });
    }
    
    // Close modal when clicking outside
    logoutModal.addEventListener('click', function(e) {
      if (e.target === logoutModal) {
        logoutModal.classList.remove('show');
      }
    });
    
    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && logoutModal.classList.contains('show')) {
        logoutModal.classList.remove('show');
      }
    });
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      initUserMenu();
      initLogoutModal();
    });
  } else {
    initUserMenu();
    initLogoutModal();
  }
})();
</script>

<script>
// Topbar Search Functionality (icon-only search near the logo)
function initTopbarSearch() {
  const searchBtn = document.getElementById('topbarSearchBtn');
