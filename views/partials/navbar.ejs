  const input = document.getElementById('topbarSearchInput');
  const inlineInput = document.getElementById('topbarSearchInlineInput');
  const inlineIcon = document.getElementById('topbarSearchInlineIcon');
  const results = document.getElementById('topbarSearchResults');
  
  if (!searchBtn || !dropdown || !input || !results) return;

  const menuItems = [
    { name: 'Dashboard', url: '/', icon: 'fas fa-home' },
    { name: 'Cabang', url: '/branches', icon: 'fas fa-building' },
    { name: 'Kategori', url: '/categories', icon: 'fas fa-tags' },
