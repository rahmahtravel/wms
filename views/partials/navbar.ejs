    { name: 'Stok Barang', url: '/stock', icon: 'fas fa-cubes' },
    { name: 'Barang Masuk', url: '/incoming', icon: 'fas fa-arrow-down' },
    { name: 'Barang Keluar', url: '/outgoing', icon: 'fas fa-arrow-up' },
    { name: 'Transfer Barang', url: '/transfer', icon: 'fas fa-exchange-alt' },
    { name: 'Stock Opname', url: '/opname', icon: 'fas fa-clipboard-check' },
    { name: 'Kelengkapan Jamaah', url: '/jamaah/kelengkapan', icon: 'fas fa-user-check' },
    { name: 'Request Perlengkapan', url: '/jamaah/request', icon: 'fas fa-envelope-open-text' },
    { name: 'Pengiriman', url: '/jamaah/pengiriman', icon: 'fas fa-shipping-fast' },
    { name: 'Rekap Ongkir', url: '/jamaah/rekap-ongkir', icon: 'fas fa-money-bill-wave' },
    { name: 'Histori Pergerakan', url: '/stock/movements', icon: 'fas fa-history' }
  ];

  // Return default suggestions: Dashboard (fixed) + 2 random distinct items
  function getDefaultSuggestions() {
    if (!menuItems || menuItems.length === 0) return [];
    const dashboard = menuItems.find(i => i.name && i.name.toLowerCase() === 'dashboard') || menuItems[0];
    // candidates excluding dashboard
    const candidates = menuItems.filter(i => i !== dashboard);
    // shuffle candidates
    for (let i = candidates.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [candidates[i], candidates[j]] = [candidates[j], candidates[i]];
    }
    // pick first two (or fewer if not available)
    const picks = candidates.slice(0, 2);
    return [dashboard].concat(picks);
  }

  let open = false;
  let mobileFloating = false;
  const posKey = 'topbarSearchPosition';

  // Allow moving the search wrapper between right topbar and left logo area
  const searchWrapper = document.getElementById('topbarSearchWrapper');
  const originalParent = searchWrapper ? searchWrapper.parentElement : null;
  const originalNextSibling = searchWrapper ? searchWrapper.nextSibling : null;
  const logoContainer = document.querySelector('.logo-container');

  function placeSearchWrapper() {
    if (!searchWrapper || !originalParent || !logoContainer) return;
    const isDesktop = window.innerWidth > 768;
    if (isDesktop) {
      // move into the logo container so icon appears next to site title
      if (searchWrapper.parentElement !== logoContainer) {
        logoContainer.appendChild(searchWrapper);
      }
    } else {
      // move back to original parent (right side)
      if (searchWrapper.parentElement !== originalParent) {
        if (originalNextSibling) originalParent.insertBefore(searchWrapper, originalNextSibling);
        else originalParent.appendChild(searchWrapper);
      }
    }
  }
  // place initially and update on resize
  placeSearchWrapper();
  window.addEventListener('resize', placeSearchWrapper);

  function openDropdown() {
    const isMobile = window.innerWidth <= 768;

    if (isMobile) {
      // Mobile: fixed dropdown under navbar (full-width)
      dropdown.classList.add('mobile-floating');
      mobileFloating = true;
      try {
        const nav = document.querySelector('.modern-navbar');
        const navH = nav ? nav.getBoundingClientRect().height : 56;
        dropdown.style.setProperty('--topbar-height', navH + 'px');
        dropdown.style.top = navH + 'px';
      } catch (e) {
        dropdown.style.top = '56px';
      }
      dropdown.style.left = '0';
      dropdown.style.right = '0';
      dropdown.style.width = '100%';
      dropdown.style.maxWidth = 'none';
      dropdown.style.display = 'block';
      dropdown.setAttribute('aria-hidden', 'false');
      searchBtn.setAttribute('aria-expanded', 'true');
      try { input.focus(); } catch (e) {}
      // mark inline wrapper active so icon stays colored (desktop will ignore)
      try { if (inlineIcon && inlineIcon.parentElement) inlineIcon.parentElement.classList.add('active'); } catch(e) {}
      // ensure animations enabled for mobile floating
      try { dropdown.classList.remove('no-anim'); } catch(e) {}
      // Render default suggestions for empty input
      if (!input.value || input.value.trim() === '') renderResults(getDefaultSuggestions(), true);
      // Ensure input visible when keyboard opens
      setTimeout(function() { try { input.scrollIntoView({ behavior: 'smooth', block: 'center' }); } catch(e) {} }, 300);
    } else {
      // Desktop: anchor under button, but clamp to viewport so it doesn't "nembus layar"
      dropdown.classList.remove('mobile-floating');
      mobileFloating = false;
      try {
        const anchorEl = (inlineInput && window.innerWidth > 768) ? inlineInput : searchBtn;
        const btnRect = anchorEl.getBoundingClientRect();
        const parentRect = dropdown.parentElement.getBoundingClientRect();

        // compute initial left/top relative to parent
        let left = Math.max(6, btnRect.left - parentRect.left);
        let top = btnRect.bottom - parentRect.top + 8; // small gap

        // Temporarily show invisible to measure size without flicker
        const prevDisplay = dropdown.style.display;
        const prevVis = dropdown.style.visibility;
        dropdown.style.visibility = 'hidden';
        dropdown.style.display = 'block';

        const ddRect = dropdown.getBoundingClientRect();
        const ddW = ddRect.width || dropdown.offsetWidth || 320;
        const ddH = ddRect.height || dropdown.offsetHeight || 200;
        const vw = window.innerWidth;
        const vh = window.innerHeight;

        // absolute left on viewport for clamping
        let absLeft = parentRect.left + left;

        // If it would overflow right edge, shift left so it fits with 8px margin
        if (absLeft + ddW + 8 > vw) {
          const shiftLeft = Math.max(8, vw - ddW - 8 - parentRect.left);
          left = shiftLeft;
          absLeft = parentRect.left + left;
        }

        // If it would overflow left, clamp to 8px from viewport left
        if (absLeft < 8) {
          left = Math.max(8 - parentRect.left, 6);
        }

        // If it would overflow bottom of viewport, move it upwards where possible
        let absTop = parentRect.top + top;
        if (absTop + ddH + 8 > vh) {
          const shiftTop = Math.max(8, vh - ddH - 8 - parentRect.top);
          top = shiftTop;
        }

        // apply computed positions (use viewport coordinates because dropdown is fixed on desktop)
        const finalAbsLeft = parentRect.left + left;
        const finalAbsTop = parentRect.top + top;
        dropdown.style.left = (finalAbsLeft) + 'px';
        dropdown.style.top = (finalAbsTop) + 'px';
        dropdown.style.right = 'auto';

        // restore visibility
        dropdown.style.visibility = prevVis || '';
        dropdown.style.display = prevDisplay || 'block';
      } catch(e) {
        dropdown.style.left = '';
        dropdown.style.top = '';
        dropdown.style.right = '0';
      }
      dropdown.style.display = 'block';
      dropdown.setAttribute('aria-hidden', 'false');
      searchBtn.setAttribute('aria-expanded', 'true');
      try { (inlineInput && window.innerWidth > 768 ? inlineInput : input).focus(); } catch(e) {}
      try { if (inlineIcon && inlineIcon.parentElement) inlineIcon.parentElement.classList.add('active'); } catch(e) {}
      // disable dropdown animation on desktop for instant show
      try { dropdown.classList.add('no-anim'); } catch(e) {}
      if (!input.value || input.value.trim() === '') renderResults(getDefaultSuggestions(), true);
    }
    open = true;
  }

  function closeDropdown() {
    dropdown.style.display = 'none';
    dropdown.setAttribute('aria-hidden', 'true');
    searchBtn.setAttribute('aria-expanded', 'false');
    input.value = '';
    if (typeof inlineInput !== 'undefined' && inlineInput) inlineInput.value = '';
    results.innerHTML = '';
    open = false;
    try { if (inlineIcon && inlineIcon.parentElement) inlineIcon.parentElement.classList.remove('active'); } catch(e) {}
    try { dropdown.classList.remove('no-anim'); } catch(e) {}
  }

  searchBtn.addEventListener('click', function(e) {
    e.stopPropagation();
    if (open) closeDropdown(); else openDropdown();
  });

  // clicking the inline icon focuses the input and opens the dropdown on desktop
  if (inlineIcon && inlineInput) {
    inlineIcon.addEventListener('click', function(e) {
      e.stopPropagation();
      if (!open) openDropdown();
      try { inlineInput.focus(); } catch (err) {}
    });
  }

  // Shared input handler for both inline (desktop) and dropdown (mobile) inputs
  function handleInputEvent() {
    const q = this.value.toLowerCase().trim();
    if (!q) { results.innerHTML = ''; return; }
    const filtered = menuItems.filter(i => i.name.toLowerCase().includes(q));
    renderResults(filtered);
  }

  input.addEventListener('input', handleInputEvent);
  if (inlineInput) {
    inlineInput.addEventListener('input', handleInputEvent);
    inlineInput.addEventListener('focus', function() {
      if (!open) openDropdown();
    });
  }

  function renderResults(items, isDefault = false) {
    results.innerHTML = '';
    if (!items || items.length === 0) {
      results.innerHTML = '<div class="topbar-search-no-results" style="padding:12px;color:#6b7280;font-style:italic">Tidak ada hasil ditemukan</div>';
      return;
    }
    // no suggestion header — show items directly
    items.forEach(item => {
      const a = document.createElement('a');
      a.href = item.url;
      a.className = 'topbar-search-result-item';
      a.innerHTML = `<i class="${item.icon}"></i><span>${item.name}</span>`;
      a.addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = item.url;
        closeDropdown();
      });
      results.appendChild(a);
    });
  }

  // Close when clicking outside
  document.addEventListener('click', function(e) {
    const clickedOutsideAnchor = !dropdown.contains(e.target) && !searchBtn.contains(e.target) && !(inlineInput && inlineInput.contains(e.target)) && !(inlineIcon && inlineIcon.contains(e.target));
    if (open && clickedOutsideAnchor) {
      closeDropdown();
    }
  });

  // Draggable behavior for mobile floating mode
  const handle = document.getElementById('topbarSearchHandle');
  if (handle) {
    let dragging = false;
    let startX, startY, startLeft, startTop;

    handle.addEventListener('pointerdown', function(e) {
      const isMobile = window.innerWidth <= 768;
      if (!isMobile) return;
      dragging = true;
      handle.setPointerCapture(e.pointerId);
      startX = e.clientX;
      startY = e.clientY;
      // current computed left/top
      const rect = dropdown.getBoundingClientRect();
      // ensure dropdown uses fixed positioning
      dropdown.style.left = rect.left + 'px';
      dropdown.style.top = rect.top + 'px';
      startLeft = rect.left;
      startTop = rect.top;
      e.preventDefault();
    });

    handle.addEventListener('pointermove', function(e) {
      if (!dragging) return;
      const dx = e.clientX - startX;
      const dy = e.clientY - startY;
      let nx = startLeft + dx;
      let ny = startTop + dy;
      // clamp to viewport
      const vw = window.innerWidth;
      const vh = window.innerHeight;
      const rect = dropdown.getBoundingClientRect();
      const w = rect.width;
      const h = rect.height;
      nx = Math.max(6, Math.min(nx, vw - w - 6));
      ny = Math.max(6, Math.min(ny, vh - h - 6));
      dropdown.style.left = nx + 'px';
      dropdown.style.top = ny + 'px';
      e.preventDefault();
    });

    handle.addEventListener('pointerup', function(e) {
      if (!dragging) return;
      dragging = false;
      try { handle.releasePointerCapture(e.pointerId); } catch (err) {}
      // save position
      const rect = dropdown.getBoundingClientRect();
      const left = Math.round(rect.left);
      const top = Math.round(rect.top);
      try { localStorage.setItem(posKey, JSON.stringify({ left, top })); } catch (err) {}
      e.preventDefault();
    });
  }

  // Update floating behaviour on resize
  function updateFloatingMode() {
    const isMobile = window.innerWidth <= 768;
    if (isMobile) {
      // keep last saved position if any
      dropdown.classList.add('mobile-floating');
    } else {
      dropdown.classList.remove('mobile-floating');
      // clear inlined positioning
      dropdown.style.left = '';
      dropdown.style.top = '';
      dropdown.style.bottom = '';
      dropdown.style.right = '';
    }
  }
  window.addEventListener('resize', updateFloatingMode);
  updateFloatingMode();

  // Close on ESC
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && open) closeDropdown();
  });

  // Enter key on input: if single result or first result, navigate
  input.addEventListener('keydown', function(e) {
    if (e.key === 'Enter') {
      const first = results.querySelector('.topbar-search-result-item');
      if (first) {
        e.preventDefault();
        window.location.href = first.getAttribute('href') || first.href;
        closeDropdown();
      }
    }
  });

  if (inlineInput) {
    inlineInput.addEventListener('keydown', function(e) {
      if (e.key === 'Enter') {
        const first = results.querySelector('.topbar-search-result-item');
        if (first) {
          e.preventDefault();
          window.location.href = first.getAttribute('href') || first.href;
          closeDropdown();
        }
      }
    });
  }
}

// Initialize
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', initTopbarSearch);
} else {
  initTopbarSearch();
}
</script>

<script>
// Topbar realtime clock
function initTopbarClock() {
  const el = document.getElementById('topbarClockTime');
  if (!el) return;

  function pad(n) { return n < 10 ? '0' + n : n; }
  function update() {
    const now = new Date();
    const hh = pad(now.getHours());
    const mm = pad(now.getMinutes());
    const ss = pad(now.getSeconds());
    el.textContent = hh + ':' + mm + ':' + ss;
  }

  update();
  // update every second, aligned to system clock
  let timeout = 1000 - (new Date().getMilliseconds());
  setTimeout(function() {
    update();
    setInterval(update, 1000);
  }, timeout);
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', initTopbarClock);
} else {
  initTopbarClock();
}
</script>