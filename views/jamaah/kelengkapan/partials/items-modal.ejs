// Update status visual indicator
function updateStatusVisualIndicator(status) {
  const config = getStatusConfig(status);
  
  const dot = document.getElementById('statusIndicatorDot');
  const text = document.getElementById('statusIndicatorText');
  const desc = document.getElementById('statusIndicatorDesc');
  const icon = document.getElementById('statusIndicatorIcon');
  
  if (dot) {
    dot.className = `w-3 h-3 rounded-full bg-${config.color}-500`;
  }
  
  if (text) {
    text.textContent = config.text;
  }
  
  if (desc) {
    desc.textContent = config.desc;
  }
  
  if (icon) {
    icon.className = `${config.icon} text-${config.color}-500`;
  }
}

async function saveSelectedItems() {
  if (!currentKelengkapanId) {
    swalError('ID kelengkapan tidak ditemukan');
    return;
  }
  
  try {
    const response = await fetch(`/jamaah/kelengkapan/${currentKelengkapanId}/items`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        selectedItems: Array.from(selectedItems),
        status_pengambilan: currentStatusPengambilan
      })
    });
    
    const result = await response.json();
    
    if (result.success) {
      swalSuccess('Kelengkapan barang dan status berhasil disimpan');
      closeItemsModal();
      // Optionally reload the page or update the UI
      setTimeout(() => {
        window.location.reload();
      }, 1500);
    } else {
      swalError(result.error || 'Gagal menyimpan kelengkapan barang');
    }
    
  } catch (error) {
    console.error('Error saving items:', error);
    swalError('Terjadi kesalahan saat menyimpan data');
  }
}
