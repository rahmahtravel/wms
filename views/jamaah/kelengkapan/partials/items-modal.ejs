function getSizeTypeLabel(sizeType) {
  const labels = {
    'clothing': 'Pakaian',
    'age_group': 'Kelompok Umur',
    'none': ''
  };
  return labels[sizeType] || sizeType;
}

function updateGroupCounters() {
  // Update group counters after item selection changes
  const groups = document.querySelectorAll('[class*="bg-gradient-to-r"]');
  groups.forEach(groupHeader => {
    const groupElement = groupHeader.closest('.mb-4');
    if (groupElement) {
      const nextSibling = groupElement.nextElementSibling;
      if (nextSibling && nextSibling.classList.contains('grid')) {
        const totalItems = nextSibling.querySelectorAll('.item-row').length;
        const selectedItems = nextSibling.querySelectorAll('.item-row input[type="checkbox"]:checked').length;
        const counterElement = groupHeader.querySelector('[class*="bg-white bg-opacity-20 px-3"]');
        if (counterElement) {
          counterElement.querySelector('span').textContent = `${selectedItems}/${totalItems}`;
        }
      }
    }
  });
}

function setupItemsSearch(items) {
  const searchInput = document.getElementById('itemsSearch');
  let searchTimeout;
  
  searchInput.oninput = function() {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
      const searchTerm = this.value.toLowerCase();
      const filteredItems = items.filter(item => 
        item.nama_barang.toLowerCase().includes(searchTerm) ||
        item.kode_barang.toLowerCase().includes(searchTerm)
      );
      displayItems(filteredItems);
    }, 300);
  };
}

function toggleItem(itemId) {
  if (selectedItems.has(itemId)) {
    selectedItems.delete(itemId);
  } else {
    selectedItems.add(itemId);
  }
  
  // Update checkbox and styling
  const checkbox = document.querySelector(`input[onchange="toggleItem(${itemId})"]`);
  const itemRow = checkbox.closest('.item-row');
  
  // Determine the color class from the group
  let colorClass = 'emerald'; // default
  const groupContainer = itemRow.closest('.mb-6');
  if (groupContainer) {
    const groupHeader = groupContainer.previousElementSibling?.querySelector('[class*="bg-gradient-to-r"]');
    if (groupHeader) {
      const classList = groupHeader.className;
      if (classList.includes('emerald')) colorClass = 'emerald';
      else if (classList.includes('blue')) colorClass = 'blue';
      else if (classList.includes('pink')) colorClass = 'pink';
      else if (classList.includes('purple')) colorClass = 'purple';
    }
  }
  
  // Update visual state with smooth animations
  const selectionIndicator = itemRow.querySelector('.absolute.-top-2.-right-2 > div');
  const selectionIcon = selectionIndicator.querySelector('i');
  const selectionStatus = itemRow.querySelector('.border-t.border-gray-100 + div span:last-child');
  const selectionStatusIcon = itemRow.querySelector('.border-t.border-gray-100 + div i');
  
  if (selectedItems.has(itemId)) {
    // Item selected
    checkbox.checked = true;
    
    // Update card styling
    itemRow.classList.add(`bg-gradient-to-br`, `from-${colorClass}-50`, `to-${colorClass}-100`, `border-${colorClass}-300`, 'shadow-lg', 'scale-105');
    itemRow.classList.remove('border-gray-200', 'hover:border-gray-300', 'bg-white');
    
    // Update selection indicator
    selectionIndicator.className = selectionIndicator.className
      .replace(/bg-gray-100|text-gray-400/g, '')
      .replace(new RegExp(`bg-\\w+-500|text-white`, 'g'), '') + ` bg-${colorClass}-500 text-white shadow-lg`;
    
    selectionIcon.className = selectionIcon.className.replace('fa-plus', 'fa-check');
    
    // Update status text
    if (selectionStatus) {
      selectionStatus.textContent = 'Terpilih';
      selectionStatus.className = selectionStatus.className.replace('text-gray-400', `text-${colorClass}-600`);
    }
    if (selectionStatusIcon) {
      selectionStatusIcon.className = selectionStatusIcon.className
        .replace('fa-circle', 'fa-check-circle')
        .replace('text-gray-400', `text-${colorClass}-600`);
    }
    
  } else {
    // Item deselected
    checkbox.checked = false;
    
    // Reset card styling
    itemRow.classList.remove(`bg-gradient-to-br`, `from-${colorClass}-50`, `to-${colorClass}-100`, `border-${colorClass}-300`, 'shadow-lg', 'scale-105');
    itemRow.classList.add('border-gray-200', 'hover:border-gray-300', 'bg-white');
    
    // Reset selection indicator
    selectionIndicator.className = selectionIndicator.className
      .replace(new RegExp(`bg-${colorClass}-500|text-white`, 'g'), '') + ' bg-gray-100 text-gray-400';
    
    selectionIcon.className = selectionIcon.className.replace('fa-check', 'fa-plus');
    
    // Reset status text
    if (selectionStatus) {
      selectionStatus.textContent = 'Pilih Item';
      selectionStatus.className = selectionStatus.className.replace(new RegExp(`text-${colorClass}-600`, 'g'), 'text-gray-400');
    }
    if (selectionStatusIcon) {
      selectionStatusIcon.className = selectionStatusIcon.className
        .replace('fa-check-circle', 'fa-circle')
        .replace(new RegExp(`text-${colorClass}-600`, 'g'), 'text-gray-400');
    }
  }
  
  updateSelectedCount();
  updateGroupCounters();
}

function updateSelectedCount() {
  document.getElementById('selectedCount').textContent = selectedItems.size;
}

// Load and display status pengambilan
function loadStatusPengambilan(status) {
  currentStatusPengambilan = status || 'Belum Diambil';
  
  // Set select value
  const selectElement = document.getElementById('statusPengambilanSelect');
  if (selectElement) {
    selectElement.value = currentStatusPengambilan;
  }
  
  // Update visual indicator
  updateStatusVisualIndicator(currentStatusPengambilan);
  
  // Update status display
  const currentStatusDisplay = document.getElementById('currentStatusDisplay');
  if (currentStatusDisplay) {
    const statusConfig = getStatusConfig(currentStatusPengambilan);
    currentStatusDisplay.innerHTML = `
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-${statusConfig.color}-100 text-${statusConfig.color}-800">
        <i class="fas fa-circle mr-1 text-${statusConfig.color}-500"></i>
        ${currentStatusPengambilan}
      </span>
    `;
  }
}

// Update status pengambilan
function updateStatusPengambilan(newStatus) {
  if (currentStatusPengambilan !== newStatus) {
    currentStatusPengambilan = newStatus;
    
    // Update visual indicator
    updateStatusVisualIndicator(newStatus);
    
    // Update current status display
    const currentStatusDisplay = document.getElementById('currentStatusDisplay');
    if (currentStatusDisplay) {
      const config = getStatusConfig(newStatus);
      currentStatusDisplay.innerHTML = `
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-${config.color}-100 text-${config.color}-800">
          <i class="fas fa-circle mr-1 text-${config.color}-500"></i>
          ${newStatus}
        </span>
      `;
    }
    
    // Show update info
    const updateInfo = document.getElementById('statusUpdateInfo');
    if (updateInfo) {
      updateInfo.style.display = 'block';
      updateInfo.innerHTML = `
        <div class="flex items-center text-sm text-blue-600">
          <i class="fas fa-info-circle text-blue-500 mr-2"></i>
          <span>Status berubah ke "<strong>${getStatusLabel(newStatus)}</strong>". Klik Simpan untuk menyimpan perubahan.</span>
        </div>
      `;
    }
  }
}

// Get status label helper
function getStatusLabel(status) {
  // Return the status as-is since we're using the exact enum values
  return status || 'Belum Diambil';
}

