<script>
let currentKelengkapanId = null;
let selectedItems = new Set();
let currentStatusPengambilan = 'Belum Diambil';

function openItemsModal(kelengkapanId) {
  currentKelengkapanId = kelengkapanId;
  selectedItems.clear();
  
  const modal = document.getElementById('itemsModal');
  const loading = document.getElementById('itemsLoading');
  const jamaahInfoContainer = document.getElementById('jamaahInfoContainer');
  const searchContainer = document.getElementById('itemsSearchContainer');
  const container = document.getElementById('itemsContainer');
  const footer = document.getElementById('itemsFooter');
  
  // Show modal and loading state
  modal.classList.remove('hidden');
  loading.classList.remove('hidden');
  jamaahInfoContainer.style.display = 'none';
  searchContainer.style.display = 'none';
  container.style.display = 'none';
  footer.style.display = 'none';
  
  // Load items and current selections
  loadItemsAndSelections();
}

function closeItemsModal() {
  document.getElementById('itemsModal').classList.add('hidden');
  currentKelengkapanId = null;
  selectedItems.clear();
  currentStatusPengambilan = 'Belum Diambil';
  document.getElementById('itemsList').innerHTML = '';
  
  // Hide status update info
  const updateInfo = document.getElementById('statusUpdateInfo');
  if (updateInfo) {
    updateInfo.style.display = 'none';
  }
  
  // Reset status containers
  const jamaahInfoContainer = document.getElementById('jamaahInfoContainer');
  const statusContainer = document.getElementById('statusPengambilanContainer');
  const itemsContainer = document.getElementById('itemsContainer');
  const searchContainer = document.getElementById('itemsSearchContainer');
  const footer = document.getElementById('itemsFooter');
  
  if (jamaahInfoContainer) jamaahInfoContainer.style.display = 'none';
  if (statusContainer) statusContainer.style.display = 'none';
  if (itemsContainer) itemsContainer.style.display = 'none';
  if (searchContainer) searchContainer.style.display = 'none';
  if (footer) footer.style.display = 'none';
}

async function loadItemsAndSelections() {
  try {
    console.log('Loading items and selections for kelengkapan ID:', currentKelengkapanId);
    
    // Load items, current selections, and kelengkapan data (includes jamaah info)
    const [itemsResponse, selectionsResponse, kelengkapanResponse] = await Promise.all([
      fetch('/jamaah/kelengkapan/items/available'),
      fetch(`/jamaah/kelengkapan/${currentKelengkapanId}/items`),
      fetch(`/jamaah/kelengkapan/${currentKelengkapanId}/status`)
    ]);
    
    // Check if responses are OK and handle non-JSON responses
    if (!itemsResponse.ok) {
      const errorText = await itemsResponse.text();
      console.error('Items response error:', errorText);
      throw new Error(`Failed to fetch items: ${itemsResponse.status}`);
    }
    if (!selectionsResponse.ok) {
      const errorText = await selectionsResponse.text();
      console.error('Selections response error:', errorText);
      throw new Error(`Failed to fetch selections: ${selectionsResponse.status}`);
    }
    if (!kelengkapanResponse.ok) {
      const errorText = await kelengkapanResponse.text();
      console.error('Kelengkapan response error:', errorText);
      throw new Error(`Failed to fetch kelengkapan: ${kelengkapanResponse.status}`);
    }
    
    // Parse JSON responses with error handling
    let items, currentSelections, kelengkapanData;
    
    try {
      items = await itemsResponse.json();
    } catch (err) {
      console.error('Error parsing items JSON:', err);
      throw new Error('Invalid response from items endpoint');
    }
    
    try {
      currentSelections = await selectionsResponse.json();
    } catch (err) {
      console.error('Error parsing selections JSON:', err);
      throw new Error('Invalid response from selections endpoint');
    }
    
    try {
      kelengkapanData = await kelengkapanResponse.json();
    } catch (err) {
      console.error('Error parsing kelengkapan JSON:', err);
      throw new Error('Invalid response from kelengkapan endpoint');
    }
    
    // Mark currently selected items
    currentSelections.forEach(item => {
      selectedItems.add(item.barang_id);
    });
    
    displayItems(items);
    updateSelectedCount();
    
    // Display jamaah information
    displayJamaahInfo(kelengkapanData);
    
    // Load and display current status
    loadStatusPengambilan(kelengkapanData.status_pengambilan || 'Belum Diambil');
    
    // Show UI elements
    document.getElementById('itemsLoading').classList.add('hidden');
    document.getElementById('jamaahInfoContainer').style.display = 'block';
    document.getElementById('itemsSearchContainer').style.display = 'block';
    document.getElementById('statusPengambilanContainer').style.display = 'block';
    document.getElementById('itemsContainer').style.display = 'block';
    document.getElementById('itemsFooter').style.display = 'flex';
    
    // Setup search functionality
    setupItemsSearch(items);
    
  } catch (error) {
    console.error('Error loading items:', error);
    // Show error state
    document.getElementById('itemsLoading').innerHTML = `
      <div class="text-center text-red-600">
        <i class="fas fa-exclamation-triangle text-2xl mb-2"></i>
        <p>Gagal memuat data barang</p>
        <p class="text-sm mt-2">${error.message}</p>
        <button onclick="loadItemsAndSelections()" class="mt-3 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
          Coba Lagi
        </button>
      </div>
    `;
  }
}

function groupItemsByCategory(items) {
  const groups = {
    'Perlengkapan Umroh': {
      icon: 'fas fa-luggage-cart',
      color: 'emerald',
      items: []
    },
    'Laki - Laki': {
      icon: 'fas fa-male',
      color: 'blue',
      items: []
    },
    'Perempuan': {
      icon: 'fas fa-female',
      color: 'pink',
      items: []
    },
    'Jaket': {
      icon: 'fas fa-tshirt',
      color: 'purple',
      items: []
    }
  };
  
  const perlengkapanItems = [
    'bantal leher', 'buku doa', 'congratulation', 'certificate', 'koper 24 inch', 'gold', 
    'syal', 'tas paspor', 'tas serut', 'sepatu'
  ];
  
  const lakiItems = ['kain ihrom anak', 'kain ihrom dewasa', 'ihrom anak', 'ihrom dewasa'];
  const perempuanItems = ['jilbab', 'mukena', 'mukena anak', 'mukena dewasa'];
  
  items.forEach(item => {
    const itemName = item.nama_barang.toLowerCase();
    
    if (itemName.includes('jaket')) {
      groups['Jaket'].items.push(item);
    } else if (lakiItems.some(keyword => itemName.includes(keyword))) {
      groups['Laki - Laki'].items.push(item);
    } else if (perempuanItems.some(keyword => itemName.includes(keyword))) {
      groups['Perempuan'].items.push(item);
    } else if (perlengkapanItems.some(keyword => itemName.includes(keyword))) {
      groups['Perlengkapan Umroh'].items.push(item);
    } else {
      groups['Perlengkapan Umroh'].items.push(item); // Default group
    }
  });
  
  return groups;
}

function displayJamaahInfo(kelengkapanData) {
  try {
    // Update jamaah name
    const jamaahNamaElement = document.getElementById('jamaahNama');
    const jamaahNoHpElement = document.getElementById('jamaahNoHp');
    
    if (jamaahNamaElement) {
      jamaahNamaElement.textContent = kelengkapanData.nama_jamaah || 'Tidak tersedia';
    }
    
    if (jamaahNoHpElement) {
      jamaahNoHpElement.textContent = kelengkapanData.nomor_telp || 'Tidak tersedia';
    }
    
    console.log('Jamaah Info:', {
      nama: kelengkapanData.nama_jamaah,
      no_hp: kelengkapanData.nomor_telp
    });
    
  } catch (error) {
    console.error('Error displaying jamaah info:', error);
  }
}

